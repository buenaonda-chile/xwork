function getFPYE206QD(){

	var sKind		= "getFPYE206QD";						
	var sMethodName = "service::psfaclib/selectFPYE206QD.do";     		// 서버에서 호출 될 Method 명
	var sInDataSet  = "";                             				// 자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_FPYE206QD=ds_FPYE206QD";    				// 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
		sArgument += "@LIB1=" + quote(Lib1);
		sArgument += "@LIB2=" + quote(Lib2);
		sArgument += "@COMPS=" + quote(P_COMPS); //사업부
		sArgument += "@PLNYY1=" + quote(substr(P_PLNYM,0,4)+"04"); //계획년
		sArgument += "@PLNYY2=" + quote(parseInt(substr(P_PLNYM,0,4))+1+"03"); //계획년
		sArgument += "@PYVND=" + quote(P_PYVND); //득의선
		sArgument += "@PSPNO=" + quote(P_PSPNO); //득의선
		sArgument += "@SHPTO=" + quote(""); //SHPTO(미사용)
		sArgument += "@PLNGB=" + quote(P_PLNGB); //계획구분
	var str = dialog("Common::PGMLOAD_FAC.xml","sKind=" + sKind + " " + "sMethodName=" + sMethodName + " " + "sOutDataSet=" + sOutDataSet + " " + "sArgument=" + sArgument,272,64,"TitleBar=false");
	if (str == 'T'){  //정상조회
		alert(setPopMessage("1004"));
		setMessage("1004");
	}else if (str == 'B'){   //data값이 없을때
		alert(setPopMessage("1003"));
		setMessage("1003");	
	}else if (str == 'E'){   //error발생시
		alert(setPopMessage("1002"));
		setMessage("1002");	
	}	
}

