#include "script::lib_script_common.js";

function on_LoadCompleted(obj)
{
	ed_select.Text = CODE;
	if (CODE == "zzzzzzzzzz") ed_select.Text="";
	imgQuery_OnClick();
	PESABN="";
}
//FHD010 용역마스타 + MST650PF 부서 조회
function imgQuery_OnClick(obj,nX,nY)
{
	http.Sync 	= false;
	var sKind		= "getSmanPopup";		
	var sMethodName = "service::pscomlib/selectSmanPopup.do"; 
	var sInDataSet  = "";
	var sOutDataSet = "ds_Select=ds_Select";
	var sArgument   = "";
		sArgument  += " LIB2=" + quote(Lib2);
		sArgument  += " COMPS=" + quote(COMP);//사업부
		sArgument  += " KORNM=" + quote(ed_select.Text);//이름
		sArgument  += " PESABN=" + quote(PESABN);//사번
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "");
}

function imgSelect_OnClick(obj,nX,nY)
{
	var arrReturn  =  Array();
	arrReturn[0]  = ds_Select.GetColumn(ds_Select.row,"PESABN");
	arrReturn[1]  = ds_Select.GetColumn(ds_Select.row,"KORNM");
	arrReturn[2]  = ds_Select.GetColumn(ds_Select.row,"DPCONM");
	arrReturn[2]  = ds_Select.GetColumn(ds_Select.row,"STRDT");
	arrReturn[2]  = ds_Select.GetColumn(ds_Select.row,"ENDDT");
	close(arrReturn);
}

function menuGrd2_OnCellDblClick(obj,nRow,nCell,nX,nY,nPivotIndex)
{
	imgSelect_OnClick();
}

function imgClose_OnClick(obj,nX,nY)
{
	Close();
