<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE sqlMapConfig
PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"
"http://ibatis.apache.org/dtd/sql-map-config-2.dtd">
	
<sqlMapConfig>	

	<properties resource="DB.properties" />	
	<settings
	   cacheModelsEnabled="true"
	   enhancementEnabled="true"
	   lazyLoadingEnabled="true"
	   maxRequests="512"
	   maxSessions="128"
	   maxTransactions="32"
	   useStatementNamespaces="true"
	/>
	
	<transactionManager type="JDBC" >
		<dataSource type="DBCP">
			<property name="JDBC.Driver" value="${DB3.driver}"/>
			<property name="JDBC.ConnectionURL" value="${DB3.url}"/>
			<property name="JDBC.Username" value="${DB3.username}"/>
			<property name="JDBC.Password" value="${DB3.password}"/>
			<property name="Pool.MaximumActiveConnections" value="10"/>
 			<property name="Pool.MaximumIdleConnections" value="10"/>  
  			<property name="Pool.MaximumCheckoutTime" value="10"/>  
  			<property name="Pool.TimeToWait" value="1000"/>  
  			<property name="Pool.pingQuery" value="select * from dual"/>  
  			<property name="Pool.PingEnabled" value="false"/>  
  			<property name="Pool.PingConnectionsOlderThan" value="0"/>  
  			<property name="Pool.PingConnectionsNotUsedFor" value="0"/> 					
		</dataSource>
	</transactionManager>
	
	<sqlMap resource="com/denso/common/sqlMap/login_sqlMap.xml" />
	<sqlMap resource="com/denso/common/sqlMap/sample_sqlMap.xml" />
	<sqlMap resource="com/denso/common/sqlMap/user_sqlMap.xml" />
	<sqlMap resource="com/denso/common/sqlMap/workday_sqlMap.xml" />
	<sqlMap resource="com/denso/common/sqlMap/max5250_sqlMap.xml" />
	<sqlMap resource="com/denso/common/sqlMap/report_sqlMap.xml" />
	<sqlMap resource="com/denso/common/sqlMap/chart_sqlMap.xml" />
	<sqlMap resource="com/denso/common/sqlMap/dwhlib_sqlMap.xml" />
	<sqlMap resource="com/denso/common/sqlMap/psimmlib_sqlMap.xml" />
	<sqlMap resource="com/denso/common/sqlMap/pssallib_sqlMap.xml" />
	<sqlMap resource="com/denso/common/sqlMap/psfaclib_sqlMap.xml" />
	<sqlMap resource="com/denso/common/sqlMap/pscomlib_sqlMap.xml" />
    <sqlMap resource="com/denso/common/sqlMap/psogmlib_sqlMap.xml" />
    <sqlMap resource="com/denso/common/sqlMap/psmstlib_sqlMap.xml" />
    <sqlMap resource="com/denso/common/sqlMap/pshumlib_sqlMap.xml" />
    <sqlMap resource="com/denso/common/sqlMap/pscstlib_sqlMap.xml" />

</sqlMapConfig>



