/********************************************************************** 
 * 내용설명 : 화면 조회 
 **********************************************************************/ 
function getOBMZ170(){

	var sKind		= "getOBMZ170";						
	var sMethodName = "service::psogmlib/selectOBMZ170.do";     		// 서버에서 호출 될 Method 명
	var sInDataSet  = "";                            				// 자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_OBMZ170=ds_OBMZ170";    				// 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
		sArgument += "@LIB1=" + quote(Lib1);
		sArgument += "@LIB2=" + quote(Lib2);
		sArgument += "@LIB3=" + quote(Lib3);
		sArgument += "@COMPS=" + quote(ComboBoxPlant.Value);
		sArgument += "@KORNM=" + quote(ed_KORNM.Text);
	var str = dialog("Common::PGMLOAD_OPG.xml","sKind=" + sKind + " " + "sMethodName=" + sMethodName + " " + "sOutDataSet=" + sOutDataSet + " " + "sArgument=" + sArgument,272,64,"TitleBar=false");	
	http.Sync = false;
	
	if (str == 'T'){  //정상조회
		alert(setPopMessage("1004"));
		setMessage("1004");	
	}else if (str == 'B'){   //data값이 없을때
		alert(setPopMessage("1003"));
		setMessage("1003");	
	}else if (str == 'E'){   //error발생시
		alert(setPopMessage("1002"));
		setMessage("1002");	
	}
}
function setOBMZ170(){

 	if(ds_OBMZ170.GetRowType(ds_OBMZ170.currow)=="update" || ds_OBMZ170.GetRowType(ds_OBMZ170.currow)=="insert" ){
		if(!ds_OBMZ170_CanRowPosChange()){
			return;
		}
	} 
	
	var sKind		= "setOBMZ170";						
	var sMethodName = "service::psogmlib/saveOBMZ170.do";
	var sInDataSet  = "ds_OBMZ170=ds_OBMZ170:U";
	var sOutDataSet = "ds_OBMZ170_CHECK=ds_OBMZ170_CHECK";
	var sArgument   = "";
		//sArgument += " LIB1=" + quote(Lib1);
		sArgument += " LIB2=" + quote(Lib2);
		sArgument += " LIB3=" + quote(Lib3);
		sArgument += " USER_ID=" + quote(G_ds_user.GetColumn(0,"USER_ID"));
	http.Sync=true;
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "callback");
	http.Sync=false;
}
/********************************************************************** 
 * 내용설명 : Transaction 리턴후 실행 함수
 * 주요변수 : 
 * 			- sMethodName	Transaction 고유 ID
 * 			- ErrorCode 	에러코드
 * 			- ErrorMSG 		에러 메세지
 **********************************************************************/ 
function callback(svcId, rtnCd, rtnMsg){
	if (ds_OBMZ170_CHECK.GetRowCount() > 0){			
		for(var i=0;i<ds_OBMZ170_CHECK.GetRowCount();i++){		
			alert("사번 : " +ds_OBMZ170_CHECK.GetColumn(i,"SABUN") + " = " + ds_OBMZ170_CHECK.GetColumn(i,"RTMSG"));
		}
		getOBMZ170();        //error항목이 존재시에는 재조회		
		return;		
	}// tran 실패
	if(rtnCd<0){
		alert(setPopMessage("1002"));
		setMessage("1002");
	}else{
		alert(setPopMessage("1001"));
		setMessage("1001");	
	}
}
