	<Script><![CDATA[

function form_OnTimer(obj,nEventID)
{
	Edit0.Text = gf_GetCurTime();	
	Edit1.Text = Datetime(GetDate()).ToString("yyyyMMddhhmmss"); //gf_GetCurTime();	
}

function form_OnLoadCompleted(obj)
{
	setTime();	
}

function setTime()
{
    SetTimer(1,1000);
}

// 시간을 구하는 함수
function gf_GetCurTime() {
    intDay = GetDay(Today());
	strDay = Decode( intDay, 0, "일", 1, "월", 2, "화", 3, "수", 4, "목", 5, "금", 6, "토" );
    return ToString(getDate(),"@@@@-@@-@@(" + strDay + ") @@:@@"); 
}
