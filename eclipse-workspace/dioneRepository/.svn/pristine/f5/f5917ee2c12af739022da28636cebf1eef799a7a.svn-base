function callback(svcId, rtnCd, rtnMsg){
	// tran 실패
	if(rtnCd<0){
		alert(setPopMessage("1002"));
		setMessage("1002");
		
	}else if(svcId=="getDWHZ018Q"){
		// 조회건수가 없을경우
		if(ds_DWH.rowcount <= 0){
			alert(setPopMessage("1003"));
			setMessage("1003");	
		// 정상 조회
		} else {
			alert(setPopMessage("1004"));
			setMessage("1004");				
		}
	}
}
/********************************************************************** 
 * 내용설명 : validation 체크
 **********************************************************************/ 
function validationChk(){

	var result = true;
	cmb_TAXDTF.BKColor="white";
	cmb_TAXDTT.BKColor="white";
		
	if (cmb_TAXDTF.Value == ""){
		cmb_TAXDTF.BKColor="paleturquoise";
		alert(setPopMessage("4053"));//[확인] 기준년월을 확인바랍니다.
		setMessage("4053");
		result = false;
	}else if(cmb_TAXDTT.Value == ""){
		cmb_TAXDTT.BKColor="paleturquoise";
		alert(setPopMessage("4053"));//[확인] 기준년월을 확인바랍니다.
		setMessage("4053");
		result = false;
	}else if(cmb_TAXDTF.Value > cmb_TAXDTT.Value){
		cmb_TAXDTT.BKColor="paleturquoise";
		alert(setPopMessage("4053"));//[확인] 기준년월을 확인바랍니다.
		setMessage("4053");
		result = false;
	} 
	return result;
}

