	http.Sync=false;

}
/********************************************************************** 
 * 내용설명 : Transaction 리턴후 실행 함수
 * 주요변수 : 
 * 			- sMethodName	Transaction 고유 ID
 * 			- ErrorCode 	에러코드
 * 			- ErrorMSG 		에러 메세지
 **********************************************************************/ 
function callback(svcId, rtnCd, rtnMsg){
	if (ds_FSME560_CHECK.GetRowCount() > 0){
		for(var i=0;i<ds_FSME560_CHECK.GetRowCount();i++){
			alert("품번 : " +ds_FSME560_CHECK.GetColumn(i,"PSPNO") + " = " + ds_FSME560_CHECK.GetColumn(i,"RTMSG"));
		}
		getFSME560();  //error항목이 존재시에는 재조회
		return;
	}// tran 실패
	if(rtnCd<0){
		alert(setPopMessage("1002"));
		setMessage("1002");
	}
}
