function ds_FSME560_CanColumnChange(obj,nRow,strColumnID,varOldValue,varNewValue,nPivotIndex)
{
	http.usewaitcursor = false;  //transaction호출후 저장이벤트가 발생되지 않아서...
	if (strColumnID == "PSPNO"){
		//품번Check
		if(length(trim(varNewValue)) < 1) {
			return;
		}
		//중복Check
		if(ds_FSME560.FindRow("PSPNO",trim(varNewValue)) != -1){
			alert("[확인] 중복된 품번이 존재합니다.");
			return false;
		}
		
		http.Sync 	= true;
		var sKind		= "getPrtno";		
		var sMethodName = "service::psfaclib/selectFSME560_FZM120.do"; 
		var sInDataSet  = "";
		var sOutDataSet = "ds_FSME560_FZM120=ds_FSME560_FZM120";
		var sArgument   = "";
			sArgument  += " LIB1=" + quote(Lib1);
			sArgument  += " LIB2=" + quote(Lib2);
			sArgument  += " PSPNO=" + quote(varNewValue);//품번
			sArgument  += " VNDNR=" + quote(trim(ed_VNDNR.Text));
		Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "");
		if (ds_FSME560_FZM120.GetRowCount() < 1){
			http.usewaitcursor = true;
			alert("[알림]ITEM MASTER A에 미등록된 품번입니다.");
			return false;
		}
		CAN_ITDSC = ds_FSME560_FZM120.GetColumn(0,"ITDSC");
		CAN_IFOTE = ds_FSME560_FZM120.GetColumn(0,"IFOTE");
		CAN_ICOST = ds_FSME560_FZM120.GetColumn(0,"ICOST");
	}
	http.usewaitcursor = true;
}

function ds_FSME560_OnColumnChanged(obj,nRow,strColumnID,varOldValue,varNewValue,nPivotIndex)
{
	if (strColumnID == "PSPNO"){
		ds_FSME560.SetColumn(nRow,"ITDSC",CAN_ITDSC);
		ds_FSME560.SetColumn(nRow,"PACFT",CAN_IFOTE);
		ds_FSME560.SetColumn(nRow,"PACCT",CAN_ICOST);
		//
	}
	if (strColumnID == "PACQY"){
		if(varNewValue == "" ){
			ds_FSME560.SetColumn(nRow,"TRQTY",0);//수량
		}else{
			ds_FSME560.SetColumn(nRow,"PACAM",toNumber(CAN_ICOST)*toNumber(varNewValue)); 
		}
	}
}

function ds_FSME560_CanRowPosChange(obj,nOldRow,nRow)
{
	var result=true;
	if(ds_FSME560.GetRowType(ds_FSME560.currow)=="update" ||ds_FSME560.GetRowType(ds_FSME560.currow)=="insert" ){
		var p_PSPNO=ds_FSME560.GetColumn(ds_FSME560.currow,"PSPNO");	//품번
		var p_PROCS=ds_FSME560.GetColumn(ds_FSME560.currow,"PROCS");	//공정
		var p_TRQTY=ds_FSME560.GetColumn(ds_FSME560.currow,"TRQTY");	//생산실적
		var p_ASQTY=ds_FSME560.GetColumn(ds_FSME560.currow,"ASQTY");	//포장수량

		if(length(p_PSPNO)!=0){
			if(length(p_PROCS)==0){
				alert("[알림] 공정코드를 입력하세요.");
				//alert(setPopMessage("2026"));//[알림] 공정코드를 입력하세요.
				//setMessage("2026");
				result=false;
			}else if(p_ASQTY > p_TRQTY){
