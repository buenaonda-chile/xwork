function validationChk1(){
	var result = true;
	cmb_PRODY.BKColor="white";

	if(cmb_PRODY.Value == ""){
		cmb_PRODY.BKColor="paleturquoise";
		alert("[알림] 포장일자 입력하세요.");
		result = false;
	}
	if(length(trim(ed_VNDNR.Text)) < 1){
		alert("[알림] 업체 입력하세요.");
		result = false;
	}
	return result;
}
function validationChk2(){
	var result = true;
	for(var i=0;i<ds_FSME560.GetRowCount();i++){
		if(length(trim(ds_FSME560.GetColumn(i,"PSPNO"))) < 1 && toNumber(ds_FSME560.GetColumn(i,"PACQY")) == 0){
			ds_FSME560.DeleteRow(i);
		}else if(length(trim(ds_FSME560.GetColumn(i,"PSPNO"))) < 1){
			alert("[알림] 품번 입력하세요.");
			MainGrid.SetFocus();
			MainGrid.SetCellPos(0);
			result = false;
		}
	}
	return result;
}
