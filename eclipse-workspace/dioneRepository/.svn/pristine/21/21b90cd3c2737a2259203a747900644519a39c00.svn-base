	var sKind		= "setFSME560";						
	var sMethodName = "service::psfaclib/saveFSME560.do";    // 서버에서 호출 될 Method 명
	var sInDataSet  = "ds_FSME560=ds_FSME560:U";               //자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_FSME560_CHECK=ds_FSME560_CHECK";  	   // 조회 후 돌려 받을 DataSet 명칭
