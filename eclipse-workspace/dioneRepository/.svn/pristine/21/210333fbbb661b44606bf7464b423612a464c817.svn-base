 **********************************************************************/ 
function getComCode(){

	http.Sync 	= true;

	var sKind		= "getComCode";						
	var sMethodName = "service::login/selectComCode.do"; 
	var sInDataSet  = "";
	var sOutDataSet = "ds_ComCode_PLNT=ds_ComCode_PLNT";
	var sArgument   = "";
		sArgument   += " CLASS='PLNT'";
		sArgument   += " CODE1=" + quote(company);		
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "");
	ComboBoxPlant.Value = comps;
}


/********************************************************************** 
 * 내용설명 : 화면조회
 * 주요변수 : 
 **********************************************************************/ 
function getBIDZ217Q(){
	if(length(ComboBoxPlant.Value) < 2){
		alert("System장애");
		return;
	}
	
	var p_vnd1,p_vnd2;
	p_vnd1 = iif (length(trim(ed_CUVND1.Text)) == 0, ' ', trim(ed_CUVND1.Text));
	p_vnd2 = iif (length(trim(ed_CUVND2.Text)) == 0 , '999999', trim(ed_CUVND2.Text));
	var p_YMD1,p_YMD2;
	p_YMD1 = iif (length(trim(ca_YMD1.Value)) == 0, 0, ca_YMD1.Value);
	p_YMD2 = iif (length(trim(ca_YMD2.Value)) == 0 , 99999999, ca_YMD2.Value);
	var p_PSP1,p_PSP2;
	p_PSP1 = iif (length(trim(ed_PRTNO1.Text)) == 0, ' ', trim(ed_PRTNO1.Text));
	p_PSP2 = iif (length(trim(ed_PRTNO2.Text)) == 0 , '999999999999999', trim(ed_PRTNO2.Text));
	var p_YM1;
	p_YM1 = iif (length(trim(ca_YMD1.Value)) == 0, '0', substr(ca_YMD1.Value,0,6));
	
	var sKind		= "getBIDZ217Q";						
	var sMethodName = "service::psimmlib/selectBIDZ217Q.do";     		// 서버에서 호출 될 Method 명
	var sInDataSet  = "";                             				// 자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_BIDZ217Q=ds_BIDZ217Q";    				// 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
	
	sArgument += "@LIB1=" + quote(Lib1);
	sArgument += "@LIB2=" + quote(Lib2);
	sArgument += "@FPNM=" + quote("F#D30PR");
	sArgument += "@COMPS=" + quote(ComboBoxPlant.Value);
	sArgument += "@SPCOD1=" + quote(p_vnd1);
	sArgument += "@SPCOD2=" + quote(p_vnd2);
	sArgument += "@PRTNO1=" + quote(p_PSP1);
	sArgument += "@PRTNO2=" + quote(p_PSP2);
	sArgument += "@YMD1=" + quote(p_YMD1);
	sArgument += "@YMD2=" + quote(p_YMD2);
	sArgument += "@YM1=" + quote(p_YM1);
	var str = dialog("Common::PGMLOAD_IMM.xml","sKind=" + sKind + " " + "sMethodName=" + sMethodName + " " + "sOutDataSet=" + sOutDataSet + " " + "sArgument=" + sArgument,272,64,"TitleBar=false");	
	//Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "callback");
	if (str == 'T'){  //정상조회
		alert(setPopMessage("1004"));
		setMessage("1004");	
	}else if (str == 'B'){   //data값이 없을때
		alert(setPopMessage("1003"));  //[알림] 조회 된 데이터가 없습니다.
		setMessage("1003");	
	}else if (str == 'E'){   //error발생시
		alert(setPopMessage("1002"));
		setMessage("1002");	
	}
}


