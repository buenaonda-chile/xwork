		var dsTargetStrArr = array();
		dsStrArr = split(dsStr,"^");
		dsTargetStrArr = split(dsTargetStr,"^");
		for(i=0;i<length(dsStrArr);i++){
			dsTargetObj = div_content.object(dsTargetStrArr[i]);
			dsTargetObj.loadXML(dsStrArr[i]);
			
			
		}
	}
}

