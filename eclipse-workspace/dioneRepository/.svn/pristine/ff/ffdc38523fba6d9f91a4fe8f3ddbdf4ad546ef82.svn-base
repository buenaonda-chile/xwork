<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <definition name="tilesbase" template="/WEB-INF/tiles/template.jsp">
        <put-attribute name="head" value="/WEB-INF/tiles/head.jsp" />
        <put-attribute name="lnb" value="/WEB-INF/tiles/lnb.jsp" />
        <put-attribute name="gnb" value="/WEB-INF/tiles/gnb.jsp" />
        <put-attribute name="body" value="" />
        <put-attribute name="footer" value="/WEB-INF/tiles/footer.jsp" />
    </definition>
	
	<definition name="/*/*/*/*.tiles" extends="tilesbase">
		<put-attribute name="body" value="/WEB-INF/view/{1}/{2}/{3}/{4}.jsp" />
	</definition>
	
	<definition name="/*/*/*.tiles" extends="tilesbase">
		<put-attribute name="body" value="/WEB-INF/view/{1}/{2}/{3}.jsp" />
	</definition>
	
	<definition name="/*/*.tiles" extends="tilesbase">
		<put-attribute name="body" value="/WEB-INF/view/{1}/{2}.jsp" />
	</definition>
	
	<definition name="/*.tiles" extends="tilesbase">
		<put-attribute name="body" value="/WEB-INF/views/{1}.jsp" />
	</definition> 
    
</tiles-definitions>