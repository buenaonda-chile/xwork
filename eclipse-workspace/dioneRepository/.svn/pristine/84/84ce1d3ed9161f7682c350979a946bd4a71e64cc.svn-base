function getInOutTime(){

	var sKind		= "getInOutTime";						
	var sMethodName = "service::pshumlib/selectNewGateAccessData.do";     	// 서버에서 호출 될 Method 명
	var sInDataSet  = "";                             					// 자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_GATE01=ds_GATE01"; 
	var sArgument   = "";
		sArgument += " ACKTIME=" + quote(Calendar0.Value);

	http.Sync=true;
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "callback");
	http.Sync=false;
}

function setInOutTime(){
	
	if(ds_GATE01.rowcount<1){
		alert("등록된 근태자료가 없습니다.");
		setMessage("등록된 근태자료가 없습니다.");
		return;
	}

	var sKind		= "setInOutTime";						
	var sMethodName = "service::pshumlib/saveNewGateAccessData.do";     	// 서버에서 호출 될 Method 명
	var sInDataSet  = "ds_GATE01=ds_GATE01";               //자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_ERROR=ds_ERROR"; 
	var sArgument   = "";
		sArgument += " ACKTIME=" + quote(Calendar0.Value);
	http.Sync=true;
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "callback");
	http.Sync=false;

}

//제환복수정
function callback(svcId, rtnCd, rtnMsg){
	// tran 실패
	if(rtnCd<0){
		alert(setPopMessage("1002"));
		setMessage("1002");
	}else if(svcId=="getInOutTime"){
		if(ds_GATE01.rowcount <= 0){
			alert(setPopMessage("1003"));
			setMessage("1003");	
		// 정상 조회
		} else {
			alert(setPopMessage("1004"));
			setMessage("1004");
			ds_GATE01_filter.Copy(ds_GATE01);
		}
	}else if(svcId=="setInOutTime"){
		if(ds_ERROR.rowcount <= 0){
			alert(setPopMessage("1001"));
			setMessage("1001");
		// 정상 조회
		} else {
			//alert(setPopMessage("1002"));
			//setMessage("1002");
			alert(ds_ERROR.GetColumn(0,"RTMSG") + " 오류명 : " +ds_ERROR.GetColumn(0,"RTERR"));
			setMessage("1002");
		}
	}
}

