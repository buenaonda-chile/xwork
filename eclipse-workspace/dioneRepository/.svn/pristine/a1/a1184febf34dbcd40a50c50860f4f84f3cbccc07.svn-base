function getComCode(){
	if (comps == "E1"){
		cb_searchCodeName1.index = 1;
	}else{
		cb_searchCodeName1.index = 0;
	}
}

function getMst040()
{
	var groupCOMPS;
	if (cb_searchCodeName1.Value == "S"){
		groupCOMPS = "PS";
	}else if(cb_searchCodeName1.Value == "E"){
		groupCOMPS = "PE";
	}else{
		groupCOMPS = "XX";
	}
	var sKind		= "getMST040PF";						
	var sMethodName = "service::pscomlib/selectMST040.do";     		// 서버에서 호출 될 Method 명
	var sInDataSet  = "";                             				// 자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_MST040PF=ds_MST040PF";   					// 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
	sArgument += " LIB2=" + quote(Lib2);
	sArgument += " COMPS=" + quote(groupCOMPS);
	sArgument += " MAJCD=" + quote("SMB116PFMAGAM");
	http.Sync 		= true;
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "");
	http.Sync 		= false;
	next_month = AddMonth(ds_MST040PF.GetColumn(0,"MJINT")+"01",1);
	
	//alert(next_month);
}
/********************************************************************** 
 * 내용설명 : 마감
 * 주요변수 : 
 **********************************************************************/ 
function setSMBZ116C(){
	if(confirm(substr(cal_JSOYM.Value,0,4)+"년 "+substr(cal_JSOYM.Value,4,2)+"월 이관작업입니다. 작업하시겠습니까? ") == false) return;
	getMst040();
	if(substr(next_month,0,6) != substr(cal_JSOYM.Value,0,6)) {
		alert("이관월 확인바랍니다.");
		return;
	}

	http.Sync = true;
	var sKind		= "getSMBZ116C";					
	var sMethodName = "service::pssallib/selectSMBZ116C.do";     		// 서버에서 호출 될 Method 명
	var sInDataSet  = "";                             				// 자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_SMBZ116C=ds_SMBZ116C";    				// 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
	sArgument += " LIB2=" + quote(Lib2);
	sArgument += " YYMM=" + quote(substr(cal_JSOYM.Value,0,6)); //선택년월
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "");
	http.Sync = false;
	if (ds_SMBZ116C.rowcount < 1){
		alert("이관할 내역이 존재하지 않습니다.");
		return;
	}
	
	http.Sync = true;
	var sKind		= "setSMBZ116C";
	var sMethodName = "service::pssallib/insertSMBZ116C.do";     		// 서버에서 호출 될 Method 명
	var sInDataSet  = "";         										// 자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = ""; 												// 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
	sArgument += " LIB2=" + quote(Lib2);
	sArgument += " YYMM=" + quote(substr(cal_JSOYM.Value,0,6)); //선택년월
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "callback");
	http.Sync = false;

}

/********************************************************************** 
 * 내용설명 : Transaction 리턴후 실행 함수
 * 주요변수 : 
 * 			- sMethodName	Transaction 고유 ID
 * 			- ErrorCode 	에러코드
 * 			- ErrorMSG 		에러 메세지
 **********************************************************************/ 
function callback(svcId, rtnCd, rtnMsg){
	// tran 실패
	if(rtnCd<0){
		alert(setPopMessage("1002"));
		setMessage("1002");
	// tran 성공	
	}else if(svcId=="setSMBZ116C"){
		// test후에 작업
		var groupCOMPS;
		if (cb_searchCodeName1.Value == "S"){
			groupCOMPS = "PS";
		}else if(cb_searchCodeName1.Value == "E"){
			groupCOMPS = "PE";
		}else{
			groupCOMPS = "XX";
		}
		var sKind		= "setmst040";						
		var sMethodName = "service::pscomlib/updateMST040.do";     		// 서버에서 호출 될 Method 명
		var sInDataSet  = "";                             				// 자료 저장 시 보낼 DataSet 명칭
		var sOutDataSet = "";    		 								// 조회 후 돌려 받을 DataSet 명칭
		var sArgument   = "";
		sArgument += " LIB2=" + quote(Lib2);
		sArgument += " COMPS=" + quote(groupCOMPS);
		sArgument += " MAJCD=" + quote("SMB116PFMAGAM");
		sArgument += " MJINT=" + quote(substr(cal_JSOYM.Value,0,6));
		Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "");
		alert(setPopMessage("1001"));
		setMessage("1001");
	}	
}

