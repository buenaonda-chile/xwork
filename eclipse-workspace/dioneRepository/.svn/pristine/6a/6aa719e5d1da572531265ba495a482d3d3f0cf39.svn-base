function common_OnChanged(obj,strCode,strText,nOldIndex,nNewIndex)
{
	if(CmbCOM.Value =="C1"){
		Lib2="PSCDBLIB";
		Lib3="PSCDBLIB";
		company="PS";
	}else if(CmbCOM.Value =="H1"){
		Lib2="PSCDBLIB";
		Lib3="PSHDBLIB";
		company="PS";
	}else if(CmbCOM.Value =="S1"){
		Lib2="PSCDBLIB";
		Lib3="PSSDBLIB";
		company="PS";
	}else if(CmbCOM.Value =="E1"){
		Lib2="PSEDBLIB";
		Lib3="PSEDBLIB";
		company="PE";
	}
	getHASS01();
}
