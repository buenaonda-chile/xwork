			alert(setPopMessage("2541"));
			setMessage("2541");
			return false;
		}
	}
	if(strColumnID == "DELGB" ){
		if (varNewValue == "1"){
			var code = ds_ogm090D.GetColumn(nRow,"PRTCD");			
			var sKind		= "getogm090D_DelChk";
			var sMethodName = "service::psogmlib/selectOGM090D_DelChk.do";     		// 서버에서 호출 될 Method 명
