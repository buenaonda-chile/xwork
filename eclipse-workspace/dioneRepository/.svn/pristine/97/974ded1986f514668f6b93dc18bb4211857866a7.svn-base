			var sOutDataSet = "ds_ogm090D_DelChk=ds_ogm090D_DelChk";    				// 조회 후 돌려 받을 DataSet 명칭
			var sArgument   = "";
			sArgument += " LIB2=" + quote(Lib2);
			sArgument += " COMPS=" + quote(ComboBoxPlant.Value); //사업부
			//sArgument += " TABLENM=" + quote(tableNm); //TABLE명
			//sArgument += " FIELD1=" + quote(field1); //FIELD명1
			sArgument += " CODE=" + quote(code); //FIELD명1
			http.Sync = true;
			Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "");
			http.Sync = false;
			if (ds_ogm090D_DelChk.GetColumn(0,"PRTCD") != "0"){
				alert(setPopMessage("2537"));
