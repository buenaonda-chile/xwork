 **********************************************************************/ 
 
function validationChk(){

	var result = true;
	var PaValue = cmbWnDatS.Value;
	var UrValue = cmbWnDatE.Value;
	
	if (length(cmbsdpcd.Value)==0)
	{
		alert("소속을 선택해주십시요");
		result =false;
	}
	else if (PaValue == "" || UrValue == "")
	{
		alert("검색기간이 미지정 되었습니다. ");
		result = false;
	}
	else if(PaValue > UrValue)
	{
		alert("검색기간을 확인해주세요\n\n검색기간이 맞지 않습니다.");
		result =false;
	}
	return result;
}

