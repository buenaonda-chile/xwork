	<Script><![CDATA[
#include "script::lib_script_common.js";


function fn_changePw(obj)
{
	if(ed_password1.Value == ""){
		alert(setPopMessage("2000"));	// 2000 == 비밀번호를 입력하세요.
		ed_password1.SetFocus();
		return false ;
	}

	if(ed_password2.Value == ""){
		alert(setPopMessage("2001"));	// 2001 == 새로운 비밀번호를 입력하세요
		ed_password2.SetFocus();
		return false ;	
	}

	
	if(ed_password3.Value == ""){
		alert(setPopMessage("2002"));	// 2002 == 비밀번호를 확인하세요
		ed_password3.SetFocus();
		return false ;	
	}

	if(ed_password1.Value != G_ds_user.GetColumn(0,"PASSWORD")){
		alert(setPopMessage("2003"));	// 2003 == 기존 비밀번호가 정확하지 않습니다.
		ed_password1.SetFocus();
		return false ;
	}
	
	if(length(ed_password2.Value) < 6){
		alert(setPopMessage("2020"));	// 2001 == 새로운 비밀번호를 입력하세요
		ed_password2.SetFocus();
		return false ;	
	}	
	
	
	if(ed_password2.Value != ed_password3.Value){
		alert(setPopMessage("2004"));	// 2004 == 새로운 비밀번호가 일치하지 않습니다.
		ed_password2.Value = "";
		ed_password3.Value = "";
		ed_password2.SetFocus();
		return false ;
	}
	
	if(ed_password2.Value == ed_password1.Value){
		alert("기존암호와 동일합니다. 다른암호를 입력바랍니다.");
		ed_password2.Value = "";
		ed_password3.Value = "";
		ed_password2.SetFocus();
		return false ;
	}
	var sNewPwd =ed_password2.Value;
	//한글 , BLANK check
	for(var z=0;z < sNewPwd.length; z++){
		var ch = ASC(CharAt(sNewPwd,z));
		if (ch > 128 || ch == 32){
			alert("한글 및 BLANK은 사용할 수 없습니다.");
			ed_password2.Value = "";
			ed_password3.Value = "";
			ed_password2.SetFocus();
			return false ;
		}
	}
	//암호복잡성check
	var cond1 =0;
	var cond2 =0;
	var cond3 =0;
	var cond4 =0;				
	for(var z=0;z < sNewPwd.length; z++){
		var char_ASCII = ASC(CharAt(sNewPwd,z));
		//숫자 	
		if (char_ASCII >= 48 && char_ASCII <= 57 ) 	
			cond1= 1;
		//영어 대문자
		else if ((char_ASCII>=65 && char_ASCII<=90)) 	
			cond2= 1;
		//영어 소문자
		else if ((char_ASCII>=97 && char_ASCII<=122)) 	
			cond3= 1;
		//특수기호 
		else if ((char_ASCII>=33 && char_ASCII<=47) 
						|| (char_ASCII>=58 && char_ASCII<=64) 
						|| (char_ASCII>=91 && char_ASCII<=96) 
						|| (char_ASCII>=123 && char_ASCII<=126)) 
			cond4= 1;
	}
	var c = cond1+cond2+cond3+cond4;
	if (c < 3) {
		alert(" 암호가 다음 최소 요구 사항을 만족해야 합니다. \n - 다음 네 가지 범주 중 세 가지의 문자를 포함해야 함. \n  1)영문 대문자(A - Z)\n  2)영문 소문자(a - z)\n  3)기본 10개 숫자(0 - 9)\n  4)알파벳 이외의 문자(예: @, $, #, %)");
		ed_password2.Value = "";
		ed_password3.Value = "";
		ed_password2.SetFocus();
		return false;				
	}
	
	ds_password.AddRow();
	
	ds_password.SetColumn(ds_password.row,"USER_ID",G_ds_user.GetColumn(0,"USER_ID"));
	ds_password.SetColumn(ds_password.row,"PASSWORD",ed_password3.Value);
	
	var sKind		= "setPassWordChang";
	var sMethodName = "service::login/setPassWordChang/change1";
	var sInDataSet  = "ds_password=ds_password:U";
	var sOutDataSet = "";
	var sArgument   = "";
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "fn_CallBack");		



}


function fn_CallBack(sMethodName, ErrorCode, ErrorMSG) {
	if(sMethodName == "setPassWordChang"){
		if(ErrorCode >= 0){
			alert(setPopMessage("2005"));// 2005 == 처리 되었습니다.
			Close();
		}
	}
}


function fn_OnLoadComPlete(obj)
{

	ed_user_id.Value = G_ds_user.GetColumn(0,"USER_NAME");
	Edit0.Value = G_ds_user.GetColumn(0,"USER_ID") ;
	
	http.Sync 		= true;
	var sKind		= "getPassWordChange";		
	var sMethodName = "service::login/getPassWordChange";					
	var sInDataSet  = "";
	var sOutDataSet = "ds_pwChangeDay=ds_pwChangeDay";
	var sArgument   = "";
		sArgument   += " USER_ID=" + quote(G_ds_user.GetColumn(0,"USER_Id"));
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "");

	edt_ldate.Value = ds_pwChangeDay.GetColumn(ds_pwChangeDay.row,"PW_DAT");
	edt_ndate.Value = ds_pwChangeDay.GetColumn(ds_pwChangeDay.row,"CHANGE_DAT");	
	
}
