function getBHZC102Q(){

	var	sKind		= "getBHZC102Q";						
	var	sMethodName = "service::psimmlib/selectBHZC102Q.do";     		// 서버에서 호출 될 Method 명
	var	sInDataSet  = "";                             				// 자료 저장 시 보낼 DataSet 명칭
	var	sOutDataSet = "ds_BHZC102Q=ds_BHZC102Q";    				// 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
	var tablenm = "F#D30PR";
	var yyyy;
	var mm = parseInt(substr(ed_syyyymmdd.Value,4,2));
	if (mm<4){
		yyyy = parseInt(substr(ed_syyyymmdd.Value,0,4)) - 1;
	}else{
		yyyy = parseInt(substr(ed_syyyymmdd.Value,0,4));
	}
	
	sArgument += "@LIB1=" + quote(Lib1);
	sArgument += "@LIB2=" + quote(Lib2);
	sArgument += "@COMPS=" + quote(cb_comp.Value);
	sArgument += "@PFNM=" + quote(tablenm);
	sArgument += "@YYYY=" + quote(yyyy);
	sArgument += "@MM=" + quote(mm);

	var str = dialog("Common::PGMLOAD.xml","sKind=" + sKind + " " + "sMethodName=" + sMethodName + " " + "sOutDataSet=" + sOutDataSet + " " + "sArgument=" + sArgument,272,64,"TitleBar=false");	
	//Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "callback");
}


