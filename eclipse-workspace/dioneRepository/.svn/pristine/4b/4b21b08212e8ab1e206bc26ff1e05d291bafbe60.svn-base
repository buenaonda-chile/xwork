/********************************************************************** 
 * 내용설명 : 화면 조회 
 **********************************************************************/ 
function getogm202(chk){
	managerYN(Lib2, ComboBoxPlant.Value, "2", G_ds_user.GetColumn(0,"USER_ID"));
	g_userclass=trim(ds_managerYN.GetColumn(0,"MAGER"));

	var methodParam	="";
	if(g_userclass == "M"){
				//M-관리자등급인 경우
		methodParam = "service::psogmlib/selectOGM202_obj200pf_05.do";     		// 서버에서 호출 될 Method 명
	}
	else{
	//G-일반책임자등급인 경우
		methodParam = "service::psogmlib/selectOGM202_obj200pf_02.do";     		// 서버에서 호출 될 Method 명
	}
		
	var sKind		= "getOgm202";						
	var	sMethodName = methodParam;     		// 서버에서 호출 될 Method 명
	var sInDataSet  = "";                             				// 자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_ogm202=ds_ogm202";    				// 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
	
	sArgument += "@LIB2=" + quote(Lib2);
	sArgument += "@LIB3=" + quote(Lib3);
	sArgument += "@COMPS=" + quote(ComboBoxPlant.Value); //사업부
	sArgument += "@SABUN=" + quote(trim(txtsabun.text));               //그룹
	http.Sync = true;
	var str = dialog("Common::PGMLOAD.xml","sKind=" + sKind + " " + "sMethodName=" + sMethodName + " " + "sOutDataSet=" + sOutDataSet + " " + "sArgument=" + sArgument,272,64,"TitleBar=false");
	http.Sync = false;
	if (chk=="0")
	{
		if (str == 'T'){  //정상조회
			alert(setPopMessage("1004"));
			setMessage("1004");	
		}else if (str == 'B'){   //data값이 없을때
			alert(setPopMessage("1003"));
			setMessage("1003");	
		}else if (str == 'E'){   //error발생시
			alert(setPopMessage("1002"));
			setMessage("1002");	
		}
	}
}

