CREATE TABLE TB_CM_ROLE (
  ROLE_CD         VARCHAR(50) NOT NULL,
  RGSTR_ID        NUMBER(20) NOT NULL,
  RGST_DT         TIMESTAMP  NOT NULL,
  UPDTR_ID        NUMBER(20) NOT NULL,
  UPDT_DT         TIMESTAMP  NOT NULL,
  ROLE_NM         VARCHAR(255) NOT NULL,
  ETC_CN          VARCHAR(1000),
  UPPER_ROLE_CD   VARCHAR(25),
  CONSTRAINT PK_CM_ROLE
  UNIQUE (ROLE_CD)
)
/
COMMENT ON TABLE TB_CM_ROLE IS 'ROLE'
/
COMMENT ON COLUMN TB_CM_ROLE.ROLE_CD IS 'ROLE_ID'
/
COMMENT ON COLUMN TB_CM_ROLE.RGSTR_ID IS '등록자ID'
/
COMMENT ON COLUMN TB_CM_ROLE.RGST_DT IS '등록일시'
/
COMMENT ON COLUMN TB_CM_ROLE.UPDTR_ID IS '수정일자ID'
/
COMMENT ON COLUMN TB_CM_ROLE.UPDT_DT IS '수정일시'
/
COMMENT ON COLUMN TB_CM_ROLE.ROLE_NM IS 'ROLE_명'
/
COMMENT ON COLUMN TB_CM_ROLE.ETC_CN IS '비고내용'
/
COMMENT ON COLUMN TB_CM_ROLE.UPPER_ROLE_CD IS '상위ROLE_ID'
/