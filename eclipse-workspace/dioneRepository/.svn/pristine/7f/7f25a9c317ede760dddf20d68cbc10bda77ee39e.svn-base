 * 내용설명 : 조회
 **********************************************************************/ 
function getOgm324(){
	if(!validationChk())
		return;
	var sdpcd="";
	var sdpcdVal=trim(cmbsdpcd.Value);
	if(length(sdpcdVal)!=0){
		sdpcd=replace(sdpcdVal,"*","%");
	}		
//	alert(sdpcd);
//alert(CheckedCount);
	var sKind		= "getOgm324";						
	var sMethodName = "service::psogmlib/selectOgm324.do"; 
	var sInDataSet  = "";
	var sOutDataSet = "ds_ogm324=ds_ogm324";
	var sArgument   = "";
		sArgument += " LIB2=" + quote(Lib2);
		sArgument += "@COMPS=" + quote(ComboBoxPlant.Value);
		sArgument += "@SDPCD=" + quote(sdpcd);
		sArgument += "@WNDATS=" + quote(cmbWnDatS.Value); //검색기간START
		sArgument += "@WNDATE=" + quote(cmbWnDatE.Value); //검색기간END
	var str = dialog("Common::PGMLOAD.xml","sKind=" + sKind + " " + "sMethodName=" + sMethodName + " " + "sOutDataSet=" + sOutDataSet + " " + "sArgument=" + sArgument,272,64,"TitleBar=false");
	if (str == 'T'){  //정상조회
		alert(setPopMessage("1004"));
		setMessage("1004");	
	}else if (str == 'B'){   //data값이 없을때
		alert(setPopMessage("1003"));
		setMessage("1003");	
	}else if (str == 'E'){   //error발생시
		alert(setPopMessage("1002"));
		setMessage("1002");	
	}
}


