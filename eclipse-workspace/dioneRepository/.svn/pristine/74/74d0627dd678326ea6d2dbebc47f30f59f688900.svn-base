	MainGrid.UserData = MainGrid.Height;
	
	searchBar.Width = G_ds_design.GetColumn(0,"Width");
	searchBar.Top = G_ds_design.GetColumn(0,"SBTop");
}

function getFZME103Q(){

	if(!validationChk()){
		return;
	}
	getCGMPARMHC();

	var bpnslt=0;
	if(ds_CGMPARMHC.GetColumn(0,"SEQMON")==1){
		bpnslt=50;//setOn50 //A.ADSDT-(INT(A.ADSDT)/100*100) > MPPDT
	}else{
		bpnslt=0;//setOFF50
	}
	
	//현재년월51, M-1월 52, M+1월53
	var plnym= substr(cmb_PLYM.Value,0,6);
	var adsyym = substr(ds_CGMPARMHC.GetColumn(0,"ADSDT"),0,6);
	var chkFlag=0;
	
	if(plnym == adsyym){
		chkFlag=51;//현재월
	}else if(plnym == substr(addMonth(ds_CGMPARMHC.GetColumn(0,"ADSDT"),-1),0,6)){
		chkFlag=52;//M-1월
	}else if(plnym == substr(addMonth(ds_CGMPARMHC.GetColumn(0,"ADSDT"),1),0,6)){
		chkFlag=53;//M+1월
	}else{
		chkFlag=54;//그외
	}
	
	/*
	else{
		alert("[알림]계획년월은 CIGMA년월+1, -1까지 입력가능합니다.");
		//alert(setPopMessage("6055"));  //[알림]계획년월은 CIGMA년월+1까지 입력가능합니다.
		//setMessage("6055");	
		cmb_PLYM.SetFocus();
		return;	
	}
	*/
	//p_SQL이 null이 아닌경우만 동작!!!!
	var p_SQL2="";
	if((chkFlag=51 && bpnslt=0) || (chkFlag=53 && bpnslt=50)){
		p_SQL2 ="A.PPL02 !=0";
	}else if((chkFlag=51 && bpnslt=50) || (chkFlag=52 && bpnslt=0)){
		p_SQL2 ="A.PPL01 !=0";
	}else if(chkFlag=53 && bpnslt=0) {
		p_SQL2 ="A.PPL03 !=0";
	}

//trace(plnym+"=="+adsyym+"=="+chkFlag+"=="+p_SQL2);
/*
	if(p_SQL2==""){
		alert(setPopMessage("2564"));
		setMessage("2564");
		return;
	}
*/
	var sKind		= "getFZME103Q";						
	var sMethodName = "service::psfaclib/selectFZME103Q.do";     		// 서버에서 호출 될 Method 명
	var sInDataSet  = "";                            				// 자료 저장 시 보낼 DataSet 명칭
	var	sOutDataSet = "ds_FZME103Q=ds_FZME103Q";    				// 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
		sArgument += "@LIB1=" + quote(Lib1);
		sArgument += "@LIB2=" + quote(Lib2);
		sArgument += "@COMPS=" + quote(ComboBoxPlant.Value); //사업부
		sArgument += "@PLYM=" + quote(substr(cmb_PLYM.Value,0,6)); //계획년월
		sArgument += "@PLSQL2=" + quote(p_SQL2); //생산계획SQL
	var str = dialog("Common::PGMLOAD_FAC.xml","sKind=" + sKind + " " + "sMethodName=" + sMethodName + " " + "sOutDataSet=" + sOutDataSet + " " + "sArgument=" + sArgument,272,64,"TitleBar=false");
	if (str == 'T'){  //정상조회
		alert(setPopMessage("1004"));
		setMessage("1004");
	}else if (str == 'B'){   //data값이 없을때
		alert(setPopMessage("1003"));
		setMessage("1003");	
	}else if (str == 'E'){   //error발생시
		alert(setPopMessage("1002"));
		setMessage("1002");	
	}
}

