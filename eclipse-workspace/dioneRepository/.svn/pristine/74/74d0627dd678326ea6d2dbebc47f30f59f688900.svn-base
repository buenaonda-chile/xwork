function validationChk(){

	var result = true;
	cmb_PLYM.BKColor="white";

	if(cmb_PLYM.Value == ""){
		cmb_PLYM.BKColor="paleturquoise";
		alert(setPopMessage("6015"));//[알림]계획년월을 입력하세요.
		setMessage("6015");
		result = false;
	}
	return result;
}

