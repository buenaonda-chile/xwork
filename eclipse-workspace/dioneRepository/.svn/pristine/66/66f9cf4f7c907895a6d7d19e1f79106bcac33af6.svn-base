function fn_Input()
{
	if(ds_ComCode.GetColumn(ds_ComCode.row,"VIEW_YN") == 'Y') {
		alert(setPopMessage("2037"));	// 20110103l-koowgnojeel, 2037 == 변경할 수 없는 고정 코드입니다.
		return false ;
	}
	if(checkInsertCount("ds_ComCode")== false) return;
	ds_ComCode.AddRow();
	ds_ComCode.SetColumn(ds_ComCode.row,"CLASS",ds_ComCodeClass.GetColumn(ds_ComCodeClass.row,"CLASS"));
	ds_ComCode.SetColumn(ds_ComCode.row,"CLASS_NAME",ds_ComCodeClass.GetColumn(ds_ComCodeClass.row,"CLASS_NAME"));
	
}

function fn_Delete()
{
	if(confirm("정말로 삭제하시겠습니까?                         ") == false) return ;
