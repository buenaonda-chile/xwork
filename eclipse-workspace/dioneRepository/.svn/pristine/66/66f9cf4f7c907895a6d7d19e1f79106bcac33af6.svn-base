function comCodeRowPosChange(obj,nOldRow,nRow)
{
	if(ds_ComCode.GetRowType(ds_Comcode.row) == "insert"){
		Edit0.Enable = true;
		Edit2.Enable = true;
	} else {
		Edit0.Enable = false;
		Edit2.Enable = false;		
	}
}

