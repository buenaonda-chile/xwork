/********************************************************************** 
 * 개 발 자 : 황규철 
 * 개발일자 : 2010-11-26
 * 내용설명 : 화면조회
 * 주요변수 : 
 **********************************************************************/ 
function getComCodeClass(){
	http.Sync = true;
	var sKind		= "getComCodeClass";						
	var sMethodName = "service::user/selectComCodeClass.do";     // 서버에서 호출 될 Method 명
	var sInDataSet  = "";                             			// 자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_ComCodeClass=ds_ComCodeClass";    	// 조회 후 돌려 받을 DataSet 명칭
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, "", "callback");

	
}

/********************************************************************** 
 * 개 발 자 : 황규철 
 * 개발일자 : 2010-11-26
 * 내용설명 : 그룹 테이터셋 변경시
 * 주요변수 : 
 **********************************************************************/ 
function CalssRowPosChange(obj,nOldRow,nRow)
{
	http.Sync = true;
	var sKind		= "getComCode";						
	var sMethodName = "service::user/selectComCode.do";     // 서버에서 호출 될 Method 명
	var sInDataSet  = "";                             		// 자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_ComCode=ds_ComCode";    			// 조회 후 돌려 받을 DataSet 명칭

	var sArgument   = "";
	sArgument += " CLASS=" + quote(ds_ComCodeClass.GetColumn(ds_ComCodeClass.row,"CLASS"));	
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "");
}

/********************************************************************** 
 * 개 발 자 : 황규철 
 * 개발일자 : 2010-11-26
 * 내용설명 : 화면저장
 * 주요변수 : 
 **********************************************************************/ 
function setComCode(){
	if(!validationChk()) return;
	var sKind		= "setComCode";						
	var sMethodName = "service::user/comCodeSave.do";     	// 서버에서 호출 될 Method 명
	var sInDataSet  = "ds_ComCode=ds_ComCode:U";     		//자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "";    								// 조회 후 돌려 받을 DataSet 명칭
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, "", "callback");
}

/********************************************************************** 
 * 개 발 자 : 황규철 
 * 개발일자 : 2010-11-26
 * 내용설명 : validation 체크
 * 주요변수 : 
 **********************************************************************/ 
function validationChk(){
	for(var i=0; i<ds_ComCode.rowcount(); i++){
		if(length(trim(ds_ComCode.GetColumn(i, "CLASS")))==0){
			alert(setPopMessage("2033"));	// 20110103l-koowgnojeel, 2033 == 구분 코드를 입력해 주세요.
			ds_ComCode.row = i;
			return false;
		}
		if(length(trim(ds_ComCode.GetColumn(i, "CODE1")))==0){
			alert(setPopMessage("2034"));	// 20110103l-koowgnojeel, 2034 == 코드1을 입력해 주세요.
			ds_ComCode.row = i;
			return false;
		}	
		if(length(trim(ds_ComCode.GetColumn(i, "CODE_NAME")))==0){
			alert(setPopMessage("2035"));	// 20110103l-koowgnojeel, 2035 == 코드명을 입력해 주세요.
			ds_ComCode.row = i;
			return false;
		}
		
		var rCnt = 0;
		for(j=0;j<ds_ComCode.rowcount;j++){
			if( ds_ComCode.GetColumn(j, "CLASS") == ed_class.Value 
			     && ds_ComCode.GetColumn(j, "CODE1") == Edit0.Value
			     && ds_ComCode.GetColumn(j, "CODE2") == Edit2.Value ){
				rCnt++;
			}
		}
		if(rCnt > 1) {
			alert(setPopMessage("2036"));	// 20110103l-koowgnojeel, 2036 == 동일한 데이터가 있습니다.
			return false;			
		}
	}
	return true;
}



/********************************************************************** 
 * 개 발 자 : 황규철 
 * 개발일자 : 2010-11-26
 * 내용설명 : Transaction 리턴후 실행 함수
 * 주요변수 : 
 * 			- sMethodName	Transaction 고유 ID
 * 			- ErrorCode 	에러코드
 * 			- ErrorMSG 		에러 메세지
 **********************************************************************/ 
function callback(svcId, rtnCd, rtnMsg){
	// tran 실패
	if(rtnCd<0){
	
		alert(setPopMessage("1002"));
		setMessage("1002");
		
	}else if(svcId=="getComCodeClass"){
		// 조회건수가 없을경우
		if(ds_ComCodeClass.rowcount <= 0){
			alert(setPopMessage("1003"));
			setMessage("1003");	
		// 정상 조회
		} else {
			alert(setPopMessage("1004"));
			setMessage("1004");				
		}
	// tran 성공	
	}else if(svcId=="setComCode"){
		//getComCodeClass();
		alert(setPopMessage("1001"));
		setMessage("1001");
	}	
}

/********************************************************************** 
 * 개 발 자 : 황규철 
