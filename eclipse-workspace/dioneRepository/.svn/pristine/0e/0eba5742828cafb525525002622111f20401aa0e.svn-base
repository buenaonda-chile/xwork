		ds_MIZZ222.SetColumn(nRow,"CATNM1",catnm1_m);
		ds_MIZZ222.SetColumn(nRow,"CATNM2",catnm2_m);
		ds_MIZZ222.SetColumn(nRow,"CATNM3",catnm3_m);
	}
}

function ds_MIZZ222_CanRowPosChange(obj,nOldRow,nRow)
{
	http.usewaitcursor = false;
	var p_CMOBJ;
	var p_CMSUB;
	if(ds_MIZZ222.GetRowType(ds_MIZZ222.currow)=="update" ||ds_MIZZ222.GetRowType(ds_MIZZ222.currow)=="insert" ){
		p_CMOBJ=ds_MIZZ222.GetColumn(ds_MIZZ222.currow,"CMOBJ");
		p_CMSUB=ds_MIZZ222.GetColumn(ds_MIZZ222.currow,"CMSUB");
		
		var LIB99;
		if(cmb_GRCOM.Value == "PE"){
			LIB99="CLTDTAE";
		}else if(cmb_GRCOM.Value == "PS"){
			LIB99="CLTDTAS";
		}else if(cmb_GRCOM.Value == "KR"){
			LIB99="CLTDTAE";
		}else{
			LIB99 = "";
		}
		var sKind		= "getMIZZ222_KY";						
		var sMethodName = "service::budget/getMIZZ222_KYList";     		// 서버에서 호출 될 Method 명
		var sInDataSet  = "";                            				// 자료 저장 시 보낼 DataSet 명칭
		var sOutDataSet = "ds_MIZZ222_KY=ds_MIZZ222_KY";    				// 조회 후 돌려 받을 DataSet 명칭
		var sArgument   = "";
			sArgument += " LIB99=" + quote(LIB99);
			sArgument += " CMOBJ=" + quote(p_CMOBJ);
			sArgument += " CMSUB=" + quote(p_CMSUB);
		http.Sync = true;
		Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "");
		http.Sync = false;
		if (ds_MIZZ222_KY.rowcount < 1){
			alert("JDE계정 Master에 존재하지 않습니다.");
			return false;
		}
		gMDL01_m = ds_MIZZ222_KY.GetColumn(0,"GMDL01");
	}
	http.usewaitcursor = true;
	return true;
}

