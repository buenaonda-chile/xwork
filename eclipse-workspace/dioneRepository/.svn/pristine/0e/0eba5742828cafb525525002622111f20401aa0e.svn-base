 **********************************************************************/ 
function getMIZZ222(){
	cmb_Category.index = 0;
	
	var groupcomp;
	var LIB99;
	if(cmb_GRCOM.Value == "PE"){
		groupcomp = "PE"; LIB99="CLTDTAE";
	}else if(cmb_GRCOM.Value == "PS"){
		groupcomp = "PS"; LIB99="CLTDTAS";
	}else if(cmb_GRCOM.Value == "KR"){
		groupcomp = "KR"; LIB99="CLTDTAE";
	}else{
		groupcomp = "";
	}
	
	http.Sync = true;
	var sKind		= "getMIZZ222";						
	var sMethodName = "service::budget/getMIZZ222List";     		// 서버에서 호출 될 Method 명
	var sInDataSet  = "";                            				// 자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_MIZZ222=ds_MIZZ222";    				// 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
	sArgument += "@GRCOM=" + quote(groupcomp);
	sArgument += "@LIB99=" + quote(LIB99);
	var str = dialog("Common::PGMLOAD_SHIP.xml","sKind=" + sKind + " " + "sMethodName=" + sMethodName + " " + "sOutDataSet=" + sOutDataSet + " " + "sArgument=" + sArgument,272,64,"TitleBar=false");	
	if (str == 'T'){  //정상조회
		alert(setPopMessage("1004"));
		setMessage("1004");	
	}else if (str == 'B'){   //data값이 없을때
		alert(setPopMessage("1003"));
		setMessage("1003");	
	}else if (str == 'E'){   //error발생시
		alert(setPopMessage("1002"));
		setMessage("1002");	
	}
	
}
