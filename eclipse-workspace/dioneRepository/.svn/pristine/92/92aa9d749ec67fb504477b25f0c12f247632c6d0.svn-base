function getComCode(){

	http.Sync 	= true;

	var sKind		= "getComCode";						
	var sMethodName = "service::login/selectComCode.do"; 
	var sInDataSet  = "";
	var sOutDataSet = "ds_ComCode_PLNT=ds_ComCode_PLNT";
	var sArgument   = "";
		sArgument   += " CLASS='PLNT'";
		sArgument   += " CODE1=" + quote(company);		
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "");
	cb_searchCodeName.Value = comps;
}


/********************************************************************** 
 * 내용설명 : 화면조회
 * 주요변수 : 
 **********************************************************************/ 
function getBHZZ105Q(){
    if(length(ca_MAGYM.Value) < 8){
		alert(setPopMessage("4020"));
		setMessage("4020");
		ca_MAGYM.SetFocus();
		return;
	}
	var yy = substr(ca_MAGYM.Value,0,4);
	var mm = substr(ca_MAGYM.Value,4,2);
	var imhyy = iif(toNumber(mm) < 4,toNumber(yy)-1,toNumber(yy));
	var beformm = substr(AddMonth(ca_MAGYM.Value,-1),4,2);
	var BEFORIMQfield = iif(beformm == "03","SUM(A.IMQ00*COALESCE(C.MNFCS,0)) AS BIMQMM","SUM(A.IMQ"+beformm+"*COALESCE(C.MNFCS,0)) AS BIMQMM");  //전월재고
	//var BEFORIMQfield = "SUM(A.IMQ"+beformm+"*COALESCE(C.MNFCS,0)) AS BIMQMM"; //전월재고
	var IMIfield = "SUM(A.IMI"+mm+"*COALESCE(C.MNFCS,0)) AS IMIMM"; //입고
	var IMOfield = "SUM(A.IMO"+mm+"*COALESCE(C.MNFCS,0)) AS IMOMM"; //출고
	var IMCfield = "SUM(A.IMC"+mm+"*COALESCE(C.MNFCS,0)) AS IMCMM"; //재고조정
	var IMQfield = "SUM(A.IMQ"+mm+"*COALESCE(C.MNFCS,0)) AS IMQMM"; //재고
	var DIFfield = "SUM(A.DIF"+mm+"*COALESCE(C.MNFCS,0)) AS DIFMM"; //실사차이
	
	
	var sKind		= "getBHZZ105Q";						
	var sMethodName = "service::psimmlib/selectBHZZ105Q.do";     		// 서버에서 호출 될 Method 명
	var sInDataSet  = "";                             				// 자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_BHZZ105Q=ds_BHZZ105Q";    				// 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
	sArgument += "@LIB1=" + quote(Lib1);
	sArgument += "@LIB2=" + quote(Lib2);
	sArgument += "@COMPS=" + quote(cb_searchCodeName.Value);
	sArgument += "@IMHYY=" + quote(imhyy);
	sArgument += "@D30PR=" + quote("F#D30PR");
	sArgument += "@BIMQ=" + quote(BEFORIMQfield);
	sArgument += "@IMI=" + quote(IMIfield);
	sArgument += "@IMO=" + quote(IMOfield);
	sArgument += "@IMC=" + quote(IMCfield);
	sArgument += "@IMQ=" + quote(IMQfield);
	sArgument += "@DIF=" + quote(DIFfield);
	var str = dialog("Common::PGMLOAD.xml","sKind=" + sKind + " " + "sMethodName=" + sMethodName + " " + "sOutDataSet=" + sOutDataSet + " " + "sArgument=" + sArgument,272,64,"TitleBar=false");	
	//Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "callback");
}


