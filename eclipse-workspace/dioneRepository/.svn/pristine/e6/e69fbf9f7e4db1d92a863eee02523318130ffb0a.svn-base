function on_LoadCompleted(obj){
	getTitle();	
	getDesign();
	gFcOnTopButtonColor("2.2"); //조회, 추가, 저장
	getComCode(); //공장구분 선택
}

function getComCode(){
	var sKind		= "getComCode";						
	var sMethodName = "service::login/selectComCode.do"; 
	var sInDataSet  = "";
	var sOutDataSet = "ds_ComCode_PLNT=ds_ComCode_PLNT";
	var sArgument   = "";
		sArgument   += " CLASS='PLNT'";
		sArgument   += " CODE1=" + quote(company);		
	http.Sync=true;
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "");
	http.Sync=false;
	ComboBoxPlant.Value=comps;
	ComboBoxPlant.Enable = false; 
}

function getDesign(){
	//MainGrid.ToolTipText = setPopMessage("2053");
	MainGrid.BkColor = G_ds_design.GetColumn(0,"BkColor");
	MainGrid.BkColor2 = G_ds_design.GetColumn(0,"BkColor2");
	MainGrid.BkSelColor = G_ds_design.GetColumn(0,"BkSelColor");
	MainGrid.Face3dColor = G_ds_design.GetColumn(0,"Face3dColor");
	MainGrid.BoldHead = G_ds_design.GetColumn(0,"BoldHead");
	MainGrid.HeadHeight = G_ds_design.GetColumn(0,"HeadHeight");
	//MainGrid.Width = G_ds_design.GetColumn(0,"Width");
	
	searchBar.Width = G_ds_design.GetColumn(0,"Width");
	searchBar.Top = G_ds_design.GetColumn(0,"SBTop");	
}

function getFGPZ030(){

	if(!validationChk()){
		return;
	}
	var sKind		= "getFGPZ030";						
	var sMethodName = "service::psfaclib/selectFGPZ030.do";     		// 서버에서 호출 될 Method 명
	var sInDataSet  = "";                             				// 자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_FGPZ030=ds_FGPZ030";    				// 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
		sArgument += "@LIB2=" + quote(Lib2);
		sArgument += "@COMPS=" + quote(ComboBoxPlant.Value); //사업부
		sArgument += "@CLSGU=" + quote(cmb_CLSGU.Value); //발생코드
		sArgument += "@GGPCD=" + quote(cmb_GGPCD.Value); //코드구분
	var str = dialog("Common::PGMLOAD_FAC.xml","sKind=" + sKind + " " + "sMethodName=" + sMethodName + " " + "sOutDataSet=" + sOutDataSet + " " + "sArgument=" + sArgument,272,64,"TitleBar=false");
	if (str == 'T'){  //정상조회
		alert(setPopMessage("1004"));
		setMessage("1004");
	}else if (str == 'B'){   //data값이 없을때
		alert(setPopMessage("1003"));
		setMessage("1003");	
	}else if (str == 'E'){   //error발생시
		alert(setPopMessage("1002"));
		setMessage("1002");	
	}
}

/********************************************************************** 
 * 내용설명 : insert, update, delete
 **********************************************************************/  
function setFGPZ030(){

	var sKind		= "setFGPZ030";						
	var sMethodName = "service::psfaclib/saveFGPZ030.do";    // 서버에서 호출 될 Method 명
	var sInDataSet  = "ds_FGPZ030=ds_FGPZ030:U";               //자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_FGPZ030_CHECK=ds_FGPZ030_CHECK";  	   // 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
		sArgument += " LIB2=" + quote(Lib2);
	http.Sync=true;
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "callback");
	http.Sync=false;

}
/********************************************************************** 
 * 내용설명 : Transaction 리턴후 실행 함수
 * 주요변수 : 
 * 			- sMethodName	Transaction 고유 ID
 * 			- ErrorCode 	에러코드
 * 			- ErrorMSG 		에러 메세지
 **********************************************************************/ 
function callback(svcId, rtnCd, rtnMsg){
	if (ds_FGPZ030_CHECK.GetRowCount() > 0){
		for(var i=0;i<ds_FGPZ030_CHECK.GetRowCount();i++){
			alert("코드 : " +ds_FGPZ030_CHECK.GetColumn(i,"CDDST") + " = " + ds_FGPZ030_CHECK.GetColumn(i,"RTMSG"));
		}
		getFGPZ030();  //error항목이 존재시에는 재조회
		return;
	}// tran 실패
	if(rtnCd<0){
		alert(setPopMessage("1002"));
		setMessage("1002");
		
	}else{
		alert(setPopMessage("1001"));
		setMessage("1001");	
	}
}

/********************************************************************** 
 * 내용설명 : validation 체크
 **********************************************************************/ 
 
function validationChk(){
	var result = true;
	var clsgu = cmb_CLSGU.Text;
	var ggpcd = cmb_GGPCD.Text;
		cmb_CLSGU.BKColor="white";
		cmb_GGPCD.BKColor="white";
		
	if (clsgu == "")
	{
		cmb_CLSGU.BKColor="paleturquoise";
		alert(setPopMessage("6010"));//[알림]발생코드를 입력하세요.
		setMessage("6010");
		result = false;
	}
	else if(ggpcd = "")
	{
		cmb_GGPCD.BKColor="paleturquoise";
		alert(setPopMessage("6011"));//[알림]코드구분을 입력하세요.
		setMessage("6011");
		result = false;
	}	
	return result;
}

