function fn_Input()
{
	if(checkInsertCount("ds_FGPZ030")== false) return;
	if(ds_FGPZ030.rowcount < 1) fn_Search();  
	ds_FGPZ030.AddRow();
	ds_FGPZ030.SetColumn(ds_FGPZ030.currow,"COMPS",ComboBoxPlant.Value);
	ds_FGPZ030.SetColumn(ds_FGPZ030.currow,"CLSGU",cmb_CLSGU.Value);
	ds_FGPZ030.SetColumn(ds_FGPZ030.currow,"GGPCD",cmb_GGPCD.Value);
}

function fn_Delete()
{
	if(ds_FGPZ030.rowcount < 1) return;			//삭제가 없으면 건너뛰기		
	ds_FGPZ030.DeleteRow(ds_FGPZ030.currow);	//삭제		
	alert(setPopMessage("1011"));				//[알림] 화면에서만 제거되었습니다. 저장하시면 삭제됩니다.		
	setMessage("1011");
}

