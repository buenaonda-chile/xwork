 **********************************************************************/ 
function setExcel()
{
	var fName   = "저장품분류마스타LIST";
	var arrSheets  =  Array();  

	arrSheets[0]  = "MainGrid|저장품분류마스타LIST";
	createExcelSheetS2(FileDialog0, fName ,arrSheets);
}

function ed_Action_OnKeyDown(obj,nChar,bShift,bCtrl, bAlt,LLParam,HLParam)
{
	if(nChar == 13){
	
		switch(obj.text){		
			case "A" : check=0; fn_Input(); break;
			case "Q" : check=1; fn_Search(); break;
			default : alert(setPopMessage("1016")); setMessage("1016");
		}
	}
}

function ds_BJMZ010_CanColumnChange(obj,nRow,strColumnID,varOldValue,varNewValue,nPivotIndex)
{	
	if( strColumnID == "CLSCD" ){
		//기등록 check
		if(ds_BJMZ010.FindRow("CLSCD", trim(varNewValue)) >= 0){
			alert(setPopMessage("1520"));  //[경고] 이미 등록된 자료입니다.
			setMessage("1520");
			displayDiv.ed_PSPNO.SetFocus();
			return false;
		}
		//중복 DATA Check,조회
		http.Sync = true;
		var sKind		= "getBJMZ010_Check";						
		var sMethodName = "service::psimmlib/selectBJMZ010.do";     		// 서버에서 호출 될 Method 명
		var sInDataSet  = "";                             				// 자료 저장 시 보낼 DataSet 명칭
		var sOutDataSet = "ds_BJMZ010_Check=ds_BJMZ010_Check";    				// 조회 후 돌려 받을 DataSet 명칭
		var sArgument   = "";
						
			sArgument += "@LIB2=" + quote(Lib2);
			sArgument += "@COMPS=" + quote(ComboBoxPlant.Value);
			sArgument += "@CLSCD=" + quote(varNewValue);
				
		var str = dialog("Common::PGMLOAD_IMM.xml","sKind=" + sKind + " " + "sMethodName=" + sMethodName + " " + "sOutDataSet=" + sOutDataSet + " " + "sArgument=" + sArgument,272,64,"TitleBar=false");	
						
		if (ds_BJMZ010_Check.GetRowCount() >= 1){
			alert(setPopMessage("1520"));  //[경고] 이미 등록된 자료입니다.		
			return false;
		}	
	}	
}

function ds_BJMZ010_OnColumnChanged(obj,nRow,strColumnID,varOldValue,varNewValue,nPivotIndex)
{		
	if (strColumnID == "CLSCD"){
		
		ds_BJMZ010.SetColumn(nRow,"COMPS",comps);
		ds_BJMZ010.SetColumn(nRow,"CLSDT",nowDate);		
	}
}



