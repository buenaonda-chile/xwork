function fn_Favorite()
{
	alert("fn_Favorite");
}

function fn_Search()
{	
	getBJMZ010();
}

function fn_Input()
{
	if(checkInsertCount("ds_BJMZ010")== false) return;
	if(ds_BJMZ010.rowcount < 1){
		fn_Search();
		if(count = 1){
			count = 0;
			return false;
		}		
	}
	ds_BJMZ010.AddRow();
	ds_BJMZ010.SetColumn(ds_BJMZ010.Row, "CLSCD", ed_CLSCD.Text); // default값 설정
		
	MainGrid.SetCellPos(4);
	MainGrid.SetFocus();
}

function fn_Delete()
{
	ds_BJMZ010.DeleteRow(ds_BJMZ010.currow);
}

function fn_Save()
{
	setBJMZ010();
}


function fn_print()
{
	alert(setPopMessage("9999"));
	setMessage("9999");
}

function fn_Excel()
