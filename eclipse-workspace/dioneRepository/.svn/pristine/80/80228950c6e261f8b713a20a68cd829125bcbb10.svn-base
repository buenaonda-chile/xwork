function getFHDZ035(){
	
	var sKind		= "getFHDZ035";						
	var sMethodName = "service::psfaclib/selectFHDZ035.do";     		// 서버에서 호출 될 Method 명
	var sInDataSet  = "";                             				// 자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_FHDZ035=ds_FHDZ035";    				// 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
		sArgument += "@LIB1=" + quote(Lib1);
		sArgument += "@LIB2=" + quote(Lib2);
		sArgument += "@COMPS=" + quote(ComboBoxPlant.Value); //사업부
	var str = dialog("Common::PGMLOAD_FAC.xml","sKind=" + sKind + " " + "sMethodName=" + sMethodName + " " + "sOutDataSet=" + sOutDataSet + " " + "sArgument=" + sArgument,272,64,"TitleBar=false");
	if (str == 'T'){  //정상조회
		alert(setPopMessage("1004"));
		setMessage("1004");
	}else if (str == 'B'){   //data값이 없을때
		alert(setPopMessage("1003"));
		setMessage("1003");	
	}else if (str == 'E'){   //error발생시
		alert(setPopMessage("1002"));
		setMessage("1002");	
	}
}

/********************************************************************** 
 * 내용설명 : insert, update, delete
 **********************************************************************/  
function setFHDZ035(){

	if(ds_FHDZ035.GetRowType(ds_FHDZ035.currow)=="update" ||ds_FHDZ035.GetRowType(ds_FHDZ035.currow)=="insert" ){
		if(!ds_FHDZ035_CanRowPosChange()){
			return;
		}
	}

	var sKind		= "setFHDZ035";						
	var sMethodName = "service::psfaclib/saveFHDZ035.do";    // 서버에서 호출 될 Method 명
	var sInDataSet  = "ds_FHDZ035=ds_FHDZ035:U";               //자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_FHDZ035_CHECK=ds_FHDZ035_CHECK";  	   // 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
		sArgument += " LIB1=" + quote(Lib1);
		sArgument += " LIB2=" + quote(Lib2);
	http.Sync=true;
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "callback");
	http.Sync=false;

}
/********************************************************************** 
 * 내용설명 : Transaction 리턴후 실행 함수
 * 주요변수 : 
 * 			- sMethodName	Transaction 고유 ID
 * 			- ErrorCode 	에러코드
 * 			- ErrorMSG 		에러 메세지
 **********************************************************************/ 
function callback(svcId, rtnCd, rtnMsg){
	if (ds_FHDZ035_CHECK.GetRowCount() > 0){
		for(var i=0;i<ds_FHDZ035_CHECK.GetRowCount();i++){
			alert("부서코드 : " +ds_FHDZ035_CHECK.GetColumn(i,"JYBDPT") + " = " + ds_FHDZ035_CHECK.GetColumn(i,"RTMSG"));
		}
		getFHDZ035();  //error항목이 존재시에는 재조회
		return;
	}// tran 실패
	if(rtnCd<0){
		alert(setPopMessage("1002"));
		setMessage("1002");
	}else{
		alert(setPopMessage("1001"));
		setMessage("1001");	
	}
}

