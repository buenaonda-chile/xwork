function ds_FHDZ035_CanColumnChange(obj,nRow,strColumnID,varOldValue,varNewValue,nPivotIndex)
{
	http.usewaitcursor = false;
	if (strColumnID == "JYBDPT"){//부서코드
		if(varNewValue!=""){
			if(ds_FHDZ035.FindRow("JYBDPT", varNewValue) >= 0){//조회된내용에서만 확인
				//alert("[경고] 이미 등록된 자료입니다.");  //[경고] 이미 등록된 자료입니다.
				alert(setPopMessage("1520"));  //[경고] 이미 등록된 자료입니다.
				setMessage("1520");	
				return false;
			}else{
				http.Sync = true;
				var sKind		= "getMST650PF";	
				var sMethodName = "service::pscomlib/selectMST650.do";  
				var sInDataSet  = "";
				var sOutDataSet = "ds_MST650PF=ds_MST650PF";
				var sArgument   = "";
					sArgument  += " LIB2=" + quote(Lib2);
					//sArgument  += " LIB3=" + quote(Lib2);
					sArgument  += " COMPS=" + quote(COMPS); //사업부
					sArgument  += " DPCODE=" + quote(varNewValue); //부서코드
				Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "");
				http.Sync = false;
				if (ds_MST650PF.GetRowCount() < 1){
					//alert("[알림]부서코드확인바랍니다.");
					alert(setPopMessage("4708"));//[알림]부서코드확인바랍니다.
					setMessage("4708");	
					return false;
				}
				DPCONM=trim(ds_MST650PF.GetColumn(0,"DPCONM"));
				DPPAT2=trim(ds_MST650PF.GetColumn(0,"DPPAT2"));
			}
		}
	}
	http.usewaitcursor = true;
}

function ds_FHDZ035_OnColumnChanged(obj,nRow,strColumnID,varOldValue,varNewValue,nPivotIndex)
{
	http.usewaitcursor = false;
	if (strColumnID == "JYBDPT"){//부서코드
		if(varNewValue!=""){
			ds_FHDZ035.SetColumn(nRow, "JYBDPM", DPCONM); //부서명
			ds_FHDZ035.SetColumn(nRow, "JYPDPT", DPPAT2); //부서코드DPPAT2
		}
		else {
			ds_FHDZ035.SetColumn(nRow, "JYBDPM", ""); //부서명
			ds_FHDZ035.SetColumn(nRow, "JYPDPT", ""); //부서명
		}
	}
	if (strColumnID == "JYPTSQ"){//PSEQ->변경시 수정자등록
		if(varNewValue!=""){
			ds_FHDZ035.SetColumn(nRow, "JYCHID", usrID); //수정자
		}
		else {
			ds_FHDZ035.SetColumn(nRow, "JYCHID", ""); //수정자
		}
	}
	if (strColumnID == "JYPRCD"){//CD->변경시 수정자등록
		if(varNewValue!=""){
			ds_FHDZ035.SetColumn(nRow, "JYCHID", usrID); //수정자
		}
		else {
			ds_FHDZ035.SetColumn(nRow, "JYPRCD", 0); //수행코드
			ds_FHDZ035.SetColumn(nRow, "JYCHID", ""); //수정자
		}
	}
	http.usewaitcursor = true;
}

function ds_FHDZ035_CanRowPosChange(obj,nOldRow,nRow)
{
	http.usewaitcursor = false;

	if(ds_FHDZ035.GetRowType(ds_FHDZ035.currow)=="update" ||ds_FHDZ035.GetRowType(ds_FHDZ035.currow)=="insert" ){
		var p_JYBDPT=ds_FHDZ035.GetColumn(ds_FHDZ035.currow,"JYBDPT"); //부서코드
		var p_JYPTSQ=ds_FHDZ035.GetColumn(ds_FHDZ035.currow,"JYPTSQ"); //발행순번(PSEQ)

		if(length(p_JYBDPT)!=0){
			if(parseInt(p_JYPTSQ) <=0 ){
				//alert("[확인] 발행순번(PSEQ)을 입력하세요.");
				alert(setPopMessage("6113")); //[확인] 발행순번(PSEQ)을 입력하세요.
				setMessage("6113");	
				return false;
			}
		}else{
			ds_FHDZ035.DeleteRow(ds_FHDZ035.currow);
		}
		return true;
	}
	http.usewaitcursor = true;
}
