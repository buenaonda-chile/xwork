 **********************************************************************/ 
function getSMBZ116(){

	if(length(st_pyvnd.Text) < 1){
		alert(setPopMessage("1502"));  //  
		setMessage("1502");
		return;
	}
	if(length(ca_TAXYM.Value) < 1){
		alert(setPopMessage("4036"));  //  [확인] 정산년월을 확인바랍니다.
		setMessage("4036");
		return;
	}

	//선택년월Check (미수금마감월+1 = 선택년월)
	http.Sync 	= true;
	var sKind		= "getMST040PF";						
	var sMethodName = "service::pscomlib/selectMST040PF.do"; 
	var sInDataSet  = "";
	var sOutDataSet = "ds_MST040PF=ds_MST040PF";
	var sArgument   = "";
		sArgument += " LIB2=" + quote(Lib2);
		sArgument += " COMPS=" + quote(ComboBoxPlant.Value);
		sArgument += " MAJCD=" + quote("SMB120PFMAGAM");		
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "");
	if (ds_MST040PF.rowcount != 0){
		if(substr(ca_TAXYM.Value,0,6) != substr(AddMonth(ds_MST040PF.GetColumn(0,"MJINT")+"01",1),0,6)){
			alert(setPopMessage("4036"));  //  [확인] 정산년월을 확인바랍니다.
			setMessage("4036");
			return;
		}
	}else{
		alert(setPopMessage("1444"));  // [경고] 시스템에 문제가 발생하였습니다. 디오네 종료 후 재가동바랍니다.
		setMessage("1444");	
	}

	var sKind		= "getSMBZ116";						
	var sMethodName = "service::pssallib/selectSMBZ116.do";     		// 서버에서 호출 될 Method 명
	var sInDataSet  = "";                             				// 자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_SMBZ116=ds_SMBZ116";    				// 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
	
	sArgument += "@LIB2=" + quote(Lib2);
	sArgument += "@COMPS=" + quote(ComboBoxPlant.Value);              //사업부
	sArgument += "@TAXYM=" + quote(substr(ca_TAXYM.Value,0,6));       //정산년월
	sArgument += "@PYVND=" + quote(ed_pyvnd.Value);                   //거래처
	var str = dialog("Common::PGMLOAD_SAL.xml","sKind=" + sKind + " " + "sMethodName=" + sMethodName + " " + "sOutDataSet=" + sOutDataSet + " " + "sArgument=" + sArgument,272,64,"TitleBar=false");
	if (str == 'T'){  //정상조회
		alert(setPopMessage("1004"));
		setMessage("1004");	
	}else if (str == 'B'){   //data값이 없을때
		alert(setPopMessage("1003"));
		setMessage("1003");	
	}else if (str == 'E'){   //error발생시
		alert(setPopMessage("1002"));
		setMessage("1002");	
	}
}

/********************************************************************** 
 * 내용설명 : insert, update, delete
 **********************************************************************/ 
function setSMBZ116(){
	if(length(st_pyvnd.Text) < 1){
		alert(setPopMessage("4007"));  //  
		setMessage("4007");
		return;
	}
	if(length(ca_TAXYM.Value) < 1){
		alert(setPopMessage("4036"));  //  [확인] 정산년월을 확인바랍니다.
		setMessage("4036");
		return;
	}
	var idnum = substr(G_ds_user.GetColumn(0,"USER_ID"),1,7);
	//if(!validationChk()) return;
	var sKind		= "setSMBZ116";						
	var sMethodName = "service::pssallib/insertSMBZ116.do";     // 서버에서 호출 될 Method 명
	var sInDataSet  = "ds_SMBZ116=ds_SMBZ116:U";               //자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_SMBZ116_CHECK=ds_SMBZ116_CHECK";     // 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
	sArgument += " LIB2=" + quote(Lib2);
	sArgument += " COMPS=" + quote(ComboBoxPlant.Value);              //사업부
	sArgument += " TAXYM=" + quote(substr(ca_TAXYM.Value,0,6));       //정산년월
	sArgument += " PYVND=" + quote(ed_pyvnd.Value);                   //거래처
	sArgument += " ADUSR=" + quote(idnum);
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "callback");
}

/********************************************************************** 
 * 내용설명 : Transaction 리턴후 실행 함수
 **********************************************************************/ 
function callback(svcId, rtnCd, rtnMsg){
	if (svcId = "setSMBZ116"){
		if (ds_SMBZ116_CHECK.GetRowCount() > 0){			
			for(var i=0;i<ds_SMBZ116_CHECK.GetRowCount();i++){		
				alert(ds_SMBZ116_CHECK.GetColumn(i,"GRPCD") + " , "
					+ ds_SMBZ116_CHECK.GetColumn(i,"MSTCD") + " = "
					+ ds_SMBZ116_CHECK.GetColumn(i,"RTMSG"));	
			}
			getSMBZ116();
			return;	
		}
	}
	// tran 실패
	if(rtnCd<0){
		alert(setPopMessage("1002"));
		setMessage("1002");
	// tran 성공	
	}else if(svcId=="setSMBZ116"){
		alert(setPopMessage("1001"));
		setMessage("1001");
	}	
}

