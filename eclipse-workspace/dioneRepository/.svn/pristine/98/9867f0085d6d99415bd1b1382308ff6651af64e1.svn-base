function ds_FACE010_CanColumnChange(obj,nRow,strColumnID,varOldValue,varNewValue,nPivotIndex)
{
	http.usewaitcursor = false;
	if(strColumnID=="DPCDC"){ //중복체크
		if(varNewValue!=""){
			if(ds_FACE010.FindRow("DPCDC",varNewValue)!="-1"){
				alert(setPopMessage("6004"));//[경고]이미등록된부서코드입니다.
				setMessage("6004");
				if(ds_FACE010.GetRowType(nRow)=="insert"){
					ds_FACE010.DeleteRow(nRow);
					ds_FACE010.SelectRow(ds_FACE010.FindRow("DPCDC",varNewValue));				
				}else{
					ds_FACE010.SelectRow(nRow, false);
					ds_FACE010.SelectRow(ds_FACE010.FindRow("DPCDC",varNewValue));				
				}
				return false;
			}else{
				http.Sync = true;
				var sKind		= "getHMD020PF";		
				var sMethodName = "service::pscomlib/selectMST650.do"; 
				var sInDataSet  = "";
				var sOutDataSet = "ds_MST650PF=ds_MST650PF";
				var sArgument   = "";
					sArgument  += " LIB2=" + quote(Lib2);
					sArgument  += " LIB3=" + quote(Lib2);
					sArgument  += " COMPS=" + quote(ComboBoxPlant.Value); //사업부
					sArgument  += " DPCODE=" + quote(varNewValue);
				Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "");
				http.Sync = false;
				if (ds_MST650PF.GetRowCount() < 1){
					//alert("[알림]부서코드확인바랍니다."); //[알림]부서코드확인바랍니다.
					alert(setPopMessage("4708")); //[알림]부서코드확인바랍니다.
					setMessage("4708");	
					return false;
				}
			}
		}
	}
	http.usewaitcursor = true;

}
function ds_FACE010_OnColumnChanged(obj,nRow,strColumnID,varOldValue,varNewValue,nPivotIndex)
{
	if(strColumnID=="DPCDC"){ //중복체크
		if(varNewValue!=""){
			ds_FACE010.SetColumn(nRow, "DPCONM", ds_MST650PF.GetColumn(0,"DPCONM")); // 거래처명 설정
		}
		else{
			ds_FACE010.SetColumn(nRow, "DPCONM", ""); // 부서명
		}
	}
}
