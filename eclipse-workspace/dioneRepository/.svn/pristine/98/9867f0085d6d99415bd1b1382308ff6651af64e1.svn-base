	}else if (str == 'E'){   //error발생시
		alert(setPopMessage("1002"));
		setMessage("1002");	
	}
}

/********************************************************************** 
 * 내용설명 : insert, update, delete
 **********************************************************************/ 
 
 //등록시 업체코드 존재유무 체크함. 없으면 동록불가.
function setFACE010(){

	if(ds_FACE010.GetRowType(ds_FACE010.currow)=="update" ||ds_FACE010.GetRowType(ds_FACE010.currow)=="insert" ){
		if(!ds_FACE010_CanRowPosChange()){
			return;
		}
	}

	var sKind		= "setFACE010";						
	var sMethodName = "service::psfaclib/saveFACE010.do";    // 서버에서 호출 될 Method 명
	var sInDataSet  = "ds_FACE010=ds_FACE010:U";               //자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_FACE010_CHECK=ds_FACE010_CHECK";  	   // 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
		sArgument += " LIB2=" + quote(Lib2);
		sArgument += " SUSER=" + quote(userId); //사용자
	http.Sync=true;
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "callback");
	http.Sync=false;

}
/********************************************************************** 
 * 내용설명 : Transaction 리턴후 실행 함수
 * 주요변수 : 
 * 			- sMethodName	Transaction 고유 ID
 * 			- ErrorCode 	에러코드
 * 			- ErrorMSG 		에러 메세지
 **********************************************************************/ 
function callback(svcId, rtnCd, rtnMsg){
	if (ds_FACE010_CHECK.GetRowCount() > 0){
		for(var i=0;i<ds_FACE010_CHECK.GetRowCount();i++){
			alert("부서코드 : " +ds_FACE010_CHECK.GetColumn(i,"DPCDC") + " = " + ds_FACE010_CHECK.GetColumn(i,"RTMSG"));
		}
		getFACE010();  //error항목이 존재시에는 재조회
		return;
	}
	// tran 실패
	if(rtnCd<0){
		alert(setPopMessage("1002"));
		setMessage("1002");
		
	}else 
	{
		//getSalz101();  //error항목이 존재시에는 재조회
		alert(setPopMessage("1001"));
		setMessage("1001");	
	}
}

