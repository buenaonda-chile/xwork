/********************************************************************** 
 * 내용설명 : 화면 조회 
 **********************************************************************/ 
function getBJSZ110(){
		
	if(!validationChk()) return;
	
	var sKind		= "getBJSZ110";						
	var sMethodName = "service::psimmlib/selectBJSZ.do";     		// 서버에서 호출 될 Method 명
	var sInDataSet  = "";                             					// 자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_BJSZ110=ds_BJSZ110";    						// 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
	
	sArgument += "@LIB2=" + quote(Lib2);
	sArgument += "@COMPS=" + quote(ComboBoxPlant.Value);  				// 사업부
	sArgument += "@SQLID=" + "selectBJSZ110Q";  			  				// SQL ID
	sArgument += "@WSIYM=" + substr(ca_WSIYM.Value,0,6);		  		  			// 전표 번호
	sArgument += "@WSDPT=" + ed_WSDPT.Value;  				  			// 업체코드
	
	var str = dialog("Common::PGMLOAD_IMM.xml","sKind=" + sKind + " " + "sMethodName=" + sMethodName + " " + "sOutDataSet=" + sOutDataSet + " " + "sArgument=" + sArgument,272,64,"TitleBar=false");
	if(ds_BJSZ110.count ==0){
		for(var i=0; i<=20; i++) {
			fn_Input();
		}
	} 
	
	if (str == 'T'){  //정상조회
		alert(setPopMessage("1004"));
		setMessage("1004");	
	}else if (str == 'B'){   //data값이 없을때
		
		alert(setPopMessage("1003"));
		setMessage("1003");	
	}else if (str == 'E'){   //error발생시
		alert(setPopMessage("1002"));
		setMessage("1002");	
	}
}

/********************************************************************** 
 * 내용설명 : insert, update, delete
 **********************************************************************/ 
function setBJSZ110(){
	
	if(!validationChk()) return;
		
	// var idnum = substr(G_ds_user.GetColumn(0,"USER_ID"),1,7); 사용자 아이디 취득
	
	var sKind		= "setBJSZ110";						
	var sMethodName = "service::psimmlib/saveBJSZ110.do";     // 서버에서 호출 될 Method 명
	var sInDataSet  = "ds_BJSZ110=ds_BJSZ110:U";               //자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_BJSZ110_CHECK=ds_BJSZ110_CHECK";     // 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
	sArgument += " LIB2=" + quote(Lib2);	
	sArgument += " COMPS=" + quote(ComboBoxPlant.Value);  					// 사업분류	
	
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "callback");
}

/********************************************************************** 
 * 내용설명 : Transaction 리턴후 실행 함수
 **********************************************************************/ 
function callback(svcId, rtnCd, rtnMsg){
	if (svcId = "setBJSZ110"){
		if (ds_BJSZ110_CHECK.GetRowCount() > 0){			
			for(var i=0;i<ds_BJSZ110_CHECK.GetRowCount();i++){		
						
				var errMessage = "'" + ds_BJSZ110_CHECK.GetColumn(i,"RPIVN") + "'";
				errMessage +=" 는 품번에 대해서 다시 확인이 필요합니다.";
				alert(errMessage);	
				/*
				for(var i=0; i<ds_BJSZ110.rowcount(); i++){
					if(trim(ds_BJSZ110.GetColumn(i,"RPIJP")) == rpijp){						
						ds_BJSZ110.SetColumn(i,"");
						continue;
					}
				}
				*/
			}	
			return;	
		}		
	}
	
	// tran 실패
	if(rtnCd<0){
		alert(setPopMessage("1002"));
		setMessage("1002");
	// tran 성공	
	}else if(svcId=="setBJSZ110"){
		alert(setPopMessage("1001"));
		setMessage("1001");
	}	
}

/********************************************************************** 
 * 내용설명 : validation 체크 1
 **********************************************************************/ 
function validationChk(){

	if(length(trim(ed_WSDPT.Text))==0){
		alert("실 사 부 서를 입력해 주세요.");
		ed_WSDPT.SetFocus();
		return false;
	}
	
	if(length(trim(ca_WSIYM.Text))==0){
		alert("실 사 년 도를 입력해 주세요.");
		ca_WSIYM.SetFocus();
		return false;
	}

	return true;
}

