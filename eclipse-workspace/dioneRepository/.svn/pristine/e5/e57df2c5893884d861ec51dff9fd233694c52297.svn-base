function getMenuList(){
	http.Sync = true;
	var sKind		= "getMenuList";						
	var sMethodName = "service::system/getMenuList";     	// 서버에서 호출 될 Method 명
	var sInDataSet  = "";                             			// 자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_menuList=ds_menuList";    			// 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
		sArgument   += " COMP=" + quote(cb_comp.Value);
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "callback");
}


