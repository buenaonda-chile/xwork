 * 주요변수 : 
 **********************************************************************/ 
function setMenuList(){
	var sKind		= "setMenuList";						
	var sMethodName = "service::system/setMenuList";     // 서버에서 호출 될 Method 명
	var sInDataSet  = "ds_menuList=ds_menuList:U";     		//자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "";    								// 조회 후 돌려 받을 DataSet 명칭
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, "", "callback");
}

/********************************************************************** 
 * 개 발 자 : 제환복 
 * 개발일자 : 2015-04-16
 * 내용설명 : Transaction 리턴후 실행 함수
 * 주요변수 : 
 * 			- sMethodName	Transaction 고유 ID
 * 			- ErrorCode 	에러코드
 * 			- ErrorMSG 		에러 메세지
 **********************************************************************/ 
function callback(svcId, rtnCd, rtnMsg){

	// tran 실패
	if(rtnCd<0){
	
		alert(setPopMessage("1002"));
		setMessage("1002");
		
	}else if(svcId=="getMenuList"){
		// 조회건수가 없을경우
		if(ds_menuList.rowcount <= 0){
			alert(setPopMessage("1003"));
			setMessage("1003");	
		// 정상 조회
		} else {
			alert(setPopMessage("1004"));
			setMessage("1004");				
		}
	// tran 성공	
	}else if(svcId=="setMenuList"){
		alert(setPopMessage("1001"));
		setMessage("1001");
	}	

}

/********************************************************************** 
 * 개 발 자 : 제환복 
