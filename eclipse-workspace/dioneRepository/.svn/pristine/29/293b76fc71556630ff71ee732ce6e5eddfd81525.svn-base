 **********************************************************************/ 
function getBJMZ114Q(){
	
	var p_buncd1,p_buncd2,p_cmDate1,p_cmDate2,p_prdNum1,p_prdNum2;
	
	p_buncd1 = iif (length(trim(ed_BUNCD1.Text)) == 0, ' ', trim(ed_BUNCD1.Text));
	p_buncd2 = iif (length(trim(ed_BUNCD2.Text)) == 0 , 'Z', trim(ed_BUNCD2.Text));
	
	p_prdNum1 = iif (length(trim(ed_PRDNUM1.Text)) == 0, ' ', trim(ed_PRDNUM1.Text));
	p_prdNum2 = iif (length(trim(ed_PRDNUM2.Text)) == 0 , '999999999999999', trim(ed_PRDNUM2.Text));
	
	p_cmDate1 = iif (length(trim(cal_CMDATE1.VALUE)) == 0, ' ', trim(cal_CMDATE1.VALUE));
	p_cmDate2 = iif (length(trim(cal_CMDATE2.VALUE)) == 0 , '99999999', trim(cal_CMDATE2.VALUE));
	
	var sArgument = "";
	var sKind		= "getBJMZ114Q";						
	var sMethodName = "service::psimmlib/selectBJMZ114Q.do";     		// 서버에서 호출 될 Method 명
	var sInDataSet  = "";                             				// 자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_BJMZ114Q=ds_BJMZ114Q";    				// 조회 후 돌려 받을 DataSet 명칭
	
	sArgument += "@LIB1=" + quote(Lib1);
	sArgument += "@LIB2=" + quote(Lib2);
	sArgument += "@COMPS=" + quote(cb_comp.Value);
	sArgument += "@BUNCD1=" + quote(p_buncd1);
	sArgument += "@BUNCD2=" + quote(p_buncd2);
	sArgument += "@PRDNUM1=" + quote(p_prdNum1);
	sArgument += "@PRDNUM2=" + quote(p_prdNum2);
	sArgument += "@CMDATE1=" + quote(p_cmDate1);
	sArgument += "@CMDATE2=" + quote(p_cmDate2);
	http.TimeOut = 600;
	var str = dialog("Common::PGMLOAD.xml","sKind=" + sKind + " " + "sMethodName=" + sMethodName + " " + "sOutDataSet=" + sOutDataSet + " " + "sArgument=" + sArgument,272,64,"TitleBar=false");	
	//Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "callback");
}


