function getSJSZ110Q(){
	
	if(!validationChk()){
		return;
	}
	//회계년도
	var sChkym=substr(cmb_CHKYM.Value,0,4);
	if(substr(cmb_CHKYM.Value,4,2) <= '03'){
		sChkym = parseInt(sChkym)-1;
	}
	//select qry
	var chkYYMM=parseInt(substr(cmb_CHKYM.Value,4,2));
	var makdtVal = makeQry(chkYYMM);
	var selDT = makeQry2(chkYYMM);

	getSYSDATE(); //SYSTEM 날짜
	var sysDt = ds_SYSDATE.GetColumn(0,"DT");
	var sysVal= substr(sysDt,0,4)+substr(sysDt,5,2);
	var chkDt= substr(cmb_CHKYM.Value,0,6);
	var chkQry ="";
	if(sysVal==chkDt){
		chkQry = "COALESCE(SUM(F.SHPQY1),0) AS SHPQY1, COALESCE(SUM(F.SHPQY2),0) AS SHPQY2";
	}
	else {
		chkQry = "'0' AS SHPQY1, '0' AS SHPQY2";
	}

	var sKind		= "getSJSZ110Q";						
	var sMethodName = "service::pssallib/selectSJSZ110Q.do";     		// 서버에서 호출 될 Method 명
	var sInDataSet  = "";                             				// 자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_SJSZ110Q=ds_SJSZ110Q";    				// 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
	sArgument += "@LIB1=" + quote(Lib1);
	sArgument += "@LIB2=" + quote(Lib2);
	sArgument += "@COMPS=" + quote(ComboBoxPlant.Value); //사업부
	sArgument += "@CHKYM=" + quote(sChkym); //회계년도
	sArgument += "@SELDT=" + quote(selDT); //전일월누계금액 쿼리
	sArgument += "@MKQRY=" + quote(makdtVal); //출고누계금액 쿼리
	sArgument += "@CHQRY=" + quote(chkQry); //선택년월
	var str = dialog("Common::PGMLOAD_SAL.xml","sKind=" + sKind + " " + "sMethodName=" + sMethodName + " " + "sOutDataSet=" + sOutDataSet + " " + "sArgument=" + sArgument,272,64,"TitleBar=false");
	if (str == 'T'){  //정상조회
		alert(setPopMessage("1004"));
		setMessage("1004");	
	}else if (str == 'B'){   //data값이 없을때
		alert(setPopMessage("1003"));
		setMessage("1003");	
	}else if (str == 'E'){   //error발생시
		alert(setPopMessage("1002"));
		setMessage("1002");	
	}
}
/********************************************************************** 
 * 내용설명 : 월column 생성 qry
 **********************************************************************/ 
 
function makeQry(YYMM){
	var mqry="";
	if( 3< YYMM && YYMM<13){
		for( i=1; i <YYMM-2; i++){
			if(length(mqry) != 0){
				mqry = mqry +"+";
			}
			mqry = mqry +"SUM(A.CAM"+lpad(i,0,2)+")";
		}
	}
	if( 0< YYMM && YYMM<4) {
		for( i=1; i <YYMM+10; i++){
			if(length(mqry) != 0){
				mqry = mqry +"+";
			}
			mqry = mqry +"SUM(A.CAM"+lpad(i,0,2)+")";
		}
	}
	return mqry;
}

function makeQry2(YYMM){
	var mqry="";
	if( 3< YYMM && YYMM<13){
		for( i=YYMM-3; i <YYMM-2; i++){
			mqry = "SUM(A.CAM"+lpad(i,0,2)+")";
		}
	}
	if( 0< YYMM && YYMM<4) {
		for( i=YYMM+9; i <YYMM+10; i++){
			mqry = "SUM(A.CAM"+lpad(i,0,2)+")";
		}
	}
	return mqry;
}

