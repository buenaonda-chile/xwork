}

function getComCode(){
	setCompanyName(ds_ComCode_GROUP);
	ComboBoxPlant.Value = iif(comps == "E1","PE","PS");
	if (ComboBoxPlant.Value == "PS"){
		LIB1 = "PSRESLIB";
		LIB2 = "PSCDBLIB";
	} else if(ComboBoxPlant.Value == "PE"){
		LIB1 = "PERESLIB";
		LIB2 = "PSEDBLIB";
	}
}

function getFZZZ200Q(){
	if(length(trim(ed_itnbr.Value)) == 0){
		alert(setPopMessage("2017"));	// = 품번을 입력하세요.
		ed_itnbr.SetFocus();
		return;
	}
	if (ComboBoxPlant.Value == "PS"){
		LIB1 = "PSRESLIB";
		LIB2 = "PSCDBLIB";
	} else if(ComboBoxPlant.Value == "PE"){
		LIB1 = "PERESLIB";
		LIB2 = "PSEDBLIB";
	}
	
	//품번Check
	http.Sync 	= true;
	var sKind		= "getITEMMST";		
	var sMethodName = "service::pscomlib/selectBM008PR.do"; 
	var sInDataSet  = "";
	var sOutDataSet = "ds_BM008PR=ds_BM008PR";
	var sArgument   = "";
		sArgument  += " LIB1=" + quote(Lib1);
		sArgument  += " ITNBR=" + quote(trim(ed_itnbr.Value));
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "");
	if (ds_BM008PR.GetRowCount() < 1){
		alert(setPopMessage("1501"));
		setMessage("1501");	
		ed_itnbr.SetFocus();
		return;
	}
	st_ITDSC.Text = trim(ds_BM008PR.GetColumn(0,"ITDSC"));
	
	MainGrid.BindDataset = "ds_main";
	p_seq = "0001"; 
	http.Sync = true;
	var sKind		= "getFZZZ200Q";						
	var sMethodName = "service::psfaclib/selectFZZZ200Q.do";     		// 서버에서 호출 될 Method 명
	var sInDataSet  = "";                             				// 자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_FZZZ200Q=ds_FZZZ200Q";    				// 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
	sArgument += " LIB2=" + quote(LIB2);
	sArgument += " LIB1=" + quote(LIB1);	
	sArgument += " PINBR=" + quote(ed_itnbr.Value);
	sArgument += " STEP='1'";
	sArgument += " STEP_TXT='1'";
	sArgument += " PNO_SEQ=" + quote(p_seq);
	sArgument += " NOWDATE=" + quote(substr(nowDate,2,6));
	
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "callback");

}

function subFZZZ200Q(dsObj)
{
	var intStep2 = 0;

	strStep = strStep + (intStep+1);

	intStep++;

	ds_tmp2.Copy(object(dsObj));
	ds_tmp.ClearData();

	for(i=0;i<ds_tmp2.rowcount;i++)
	{
		var sArgument   = "";
		
		intStep2++;
		http.Sync = true;
		sArgument += " LIB1=" + quote(LIB1);	
		sArgument += " PINBR=" + quote(ds_tmp2.GetColumn(i,"ITNBR"));
		sArgument += " STEP=" + quote(ds_tmp2.GetColumn(i,"ROWNUMBER"));
		sArgument += " STEP2=" + quote(intStep2);
		sArgument += " STEP_TXT=" + quote(makePoint(intStep) + intStep);
		sArgument += " NOWDATE=" + quote(substr(nowDate,2,6));
		sArgument += " TOPQTYPR=" + quote(ds_tmp2.GetColumn(i,"TQTYPR"));
		Transaction("subFZZZ200Q", "service::psfaclib/selecFZZZ200QSub.do", "", "ds_FZZZ200QSub=ds_FZZZ200QSub", sArgument, "");
		
		ds_main.AppendDataset("ds_FZZZ200QSub");
		
		ds_tmp.AppendDataset("ds_FZZZ200QSub");

	}

	if(object(dsObj).rowcount != 0)
	{
		subFZZZ200Q("ds_tmp");
	} else {
		ds_main.Sort("ROWNUMBER");
		alert(setPopMessage("1004"));
		setMessage("1004");			
	}
}


function makePoint(cnt)
{
	var returnCnt = cnt -1;
	var returnValue = "";

	for(i=0; i<returnCnt;i++)
	{
		returnValue += ".";
	}
	
	return returnValue;
}

function callback(svcId, rtnCd, rtnMsg){
	// tran 실패
	if(rtnCd<0){
		alert(setPopMessage("1002"));
		setMessage("1002");
		
	}else if(svcId=="getFZZZ200Q"){
		// 조회건수가 없을경우
		if(ds_FZZZ200Q.rowcount <= 0){
			if(rdoggub.Value == "A"){
				alert(setPopMessage("1003"));
				setMessage("1003");	
			}else{
				
			}
		// 정상 조회
		} else {
			ds_main.Copy("ds_FZZZ200Q");
			var nRow = ds_main.AddRow();
			ds_main.SetColumn(nRow,"STEP_TXT","0");
			ds_main.SetColumn(nRow,"PINBR","");
			ds_main.SetColumn(nRow,"ROWNUMBER","0");
			ds_main.SetColumn(nRow,"ITNBR",ds_FZZZ200Q.GetColumn(0,"PINBR"));
			ds_main.SetColumn(nRow,"QTYPR","");
			ds_main.SetColumn(nRow,"UNMSR","");
			ds_main.SetColumn(nRow,"ITTYP","");
			ds_main.SetColumn(nRow,"MDATE","");
			ds_main.SetColumn(nRow,"ITDSC","");
			ds_main.SetColumn(nRow,"STEP","");
			ds_main.SetColumn(nRow,"STEP2","");
			ds_main.SetColumn(nRow,"EDATM","");
			ds_main.SetColumn(nRow,"EDATO","");
			ds_main.SetColumn(nRow,"CONNO","");
			ds_main.SetColumn(nRow,"SPCOD","");
			ds_main.SetColumn(nRow,"TQTYPR","");
			subFZZZ200Q("ds_FZZZ200Q");
		}
	// tran 성공	
	}else if(svcId=="setFZZZ200Q"){
		alert(setPopMessage("1001"));
		setMessage("1001");
	}	
}


function setExcel()
{
	if (ds_main.rowcount == 0) return;
	if(length(trim(ed_itnbr.Value)) == 0) return;
	
	var fName   = "Product Structure_" + trim(ed_itnbr.Value);
	var arrSheets  =  Array();  

	arrSheets[0]  = "MainGrid|Product Structure";
	
	createExcelSheetS2(FileDialog0, fName ,arrSheets);

}


