/********************************************************************** 
 * 내용설명 : 조회
 **********************************************************************/ 
function getOgm320(){
	if(!validationChk())
		return;
	var sdpcd="";
	var sdpcdVal=trim(cmbsdpcd.Value);
	if(length(sdpcdVal)!=0){
		sdpcd=replace(sdpcdVal,"*","%");
	}

	ds_ogm320_pre.ClearData();
	var sKind		= "getOgm320";						
	var sMethodName = "service::psogmlib/selectOgm320_amount_dis.do"; 
	var sInDataSet  = "";
	var sOutDataSet = "ds_ogm320_amount_dis=ds_ogm320_amount_dis";
	var sArgument   = "";
		sArgument += "@LIB2=" + quote(Lib2);
		sArgument += "@COMPS=" + quote(ComboBoxPlant.Value);
		sArgument += "@SDPCD=" + quote(sdpcd);
		sArgument += "@WNDATS=" + quote(cmbWnDatS.Value); //검색기간START
		sArgument += "@WNDATE=" + quote(cmbWnDatE.Value); //검색기간END
	http.Sync=true;
	var str = dialog("Common::PGMLOAD.xml","sKind=" + sKind + " " + "sMethodName=" + sMethodName + " " + "sOutDataSet=" + sOutDataSet + " " + "sArgument=" + sArgument,272,64,"TitleBar=false");
	//Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "callback");
		if(ds_ogm320_amount_dis.GetRowCount() > 0){
		var A1,A2,A3,A4;
		for(var i=0;i<29;i++){
			ds_ogm320_pre.InsertRow(i);
			A1="COL"+(i+1)+"1";
			A2="COL"+(i+1)+"2";
			A3="COL"+(i+1)+"3";
			A4="COL"+(i+1)+"4";
			A5="COL"+(i+1)+"5";
			ds_ogm320_pre.SetColumn(i,"EFFCD",ds_ogm320_amount_dis.GetColumn(0,A1));
			ds_ogm320_pre.SetColumn(i,"EFFNM",ds_ogm320_amount_dis.GetColumn(0,A2));
			ds_ogm320_pre.SetColumn(i,"SUM_ECOST",ds_ogm320_amount_dis.GetColumn(0,A3));
			ds_ogm320_pre.SetColumn(i,"CNT_ECOST",ds_ogm320_amount_dis.GetColumn(0,A4));
			ds_ogm320_pre.SetColumn(i,"ORG_EFFCD",ds_ogm320_amount_dis.GetColumn(0,A5));
			}
//alert(ds_ogm320_amount.GetRowCount());
//j=0부터하는 경우 삭제후 row가 재정렬되어 연속두건삭제되는경우는 삭제가안됨. 따라서 밑에서부터서 거꾸로삭제함.
		for(var j=ds_ogm320_pre.GetRowCount();j>=0;j--){ 
//alert(ds_ogm320_amount.GetColumn(j,"EFFCD")+"=="+ds_ogm320_amount.GetColumn(j,"SUM_ECOST"));
				if (parseInt(ds_ogm320_pre.GetColumn(j,"SUM_ECOST")) == 0){
//alert(ds_ogm320_amount.GetColumn(j,"EFFCD")+"=="+ds_ogm320_amount.GetColumn(j,"SUM_ECOST"));
					ds_ogm320_pre.DeleteRow(j);
				}		
			}	
		ds_ogm320_amount.Copy(ds_ogm320_pre);
		}
	http.Sync=false;
		
	if (str == 'T'){  //정상조회
		if(ds_ogm320_amount.rowcount <= 0){
			alert(setPopMessage("1003"));
			setMessage("1003");
			txtsumecost.Text="0.0";
			txtsumnocnt.Text="0";
		}
		else{
			alert(setPopMessage("1004"));
			setMessage("1004");
			cal_data();
		}	
	}else if (str == 'B'){   //data값이 없을때
		alert(setPopMessage("1003"));
		setMessage("1003"); 
	}else if (str == 'E'){   //error발생시
		alert(setPopMessage("1002"));
		setMessage("1002");	
	}	
}



/********************************************************************** 
