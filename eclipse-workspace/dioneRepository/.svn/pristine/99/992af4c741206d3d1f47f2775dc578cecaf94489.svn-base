 **********************************************************************/ 
function setMIZZ220(){
/*
	if(!validationChk()){
		return;
	}
*/
	var sKind		= "setMIZZ220";						
	var sMethodName = "service::budget/setMIZZ220List";     // 서버에서 호출 될 Method 명
	var sInDataSet  = "ds_MIZZ220=ds_MIZZ220:U";     //자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet  = "ds_MIZZ220_CHECK=ds_MIZZ220_CHECK";     //자료 저장 시 보낼 DataSet 명칭
	var sArgument   = "";
		//sArgument += " LIB1=" + quote(Lib1);
		sArgument += " LIB2=" + quote(Lib2);
	http.Sync=true;
	Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "callback");
	http.Sync=false;
}
/********************************************************************** 
 * 내용설명 : Transaction 리턴후 실행 함수
 * 주요변수 : 
 * 			- sMethodName	Transaction 고유 ID
 * 			- ErrorCode 	에러코드
 * 			- ErrorMSG 		에러 메세지
 **********************************************************************/ 
function callback(svcId, rtnCd, rtnMsg){
	if (ds_MIZZ220_CHECK.GetRowCount() > 0){
		for(var i=0;i<ds_MIZZ220_CHECK.GetRowCount();i++){
			alert("항목코드 : " +ds_MIZZ220_CHECK.GetColumn(i,"CATNO") + " = " + ds_MIZZ220_CHECK.GetColumn(i,"RTMSG"));
		}
		getMIZZ220();  //error항목이 존재시에는 재조회
		return;
	}// tran 실패
	if(rtnCd<0){
		alert(setPopMessage("1002"));
		setMessage("1002");
	}else{
		alert(setPopMessage("1001"));
		setMessage("1001");	
	}
}

