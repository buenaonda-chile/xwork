function ds_MIZZ220_CanColumnChange(obj,nRow,strColumnID,varOldValue,varNewValue,nPivotIndex)
{
	if(strColumnID == "CATNO"){
		if(length(varNewValue) != 6){
			alert("Length = 6으로.....");
			return false;
		}
		if(substr(varNewValue,0,1) != "M") {
			alert("M으로 시작해야합니다.");
			return false;
		}
		//숫자check
		if (!numberChk(substr(varNewValue,1,5))){
			alert("M다음은 숫자입니다. 'M00000'");
			return false;
		}
		
	}
	if(strColumnID == "CATNM1"){
		var p_catno=ds_MIZZ220.GetColumn(ds_MIZZ220.currow,"CATNO");
		var p_FROW=ds_Category.FindRow("CD",substr(p_catno,1,2));
		if(p_FROW != -1){
			var p_cdnm = ds_Category.GetColumn(p_FROW,"CDNM");
			if(p_cdnm != varNewValue){
				alert(substr(p_catno,0,3) + " ~ 은 항목명1을 "+p_cdnm+"으로 수정하세요..");
				return false;
			}
		}
	}
	
	if(strColumnID == "MAGGB" || strColumnID == "MATGB" || strColumnID == "PERGB"){
		if(!(varNewValue == "Y" || varNewValue == "N")){
			alert(" Y,N 입력바랍니다.");
			return false;
		}
	}
	if(strColumnID == "CTODT"){
		if(length(varNewValue) != 8){
			alert("년월일(YYYYmmDD) 확인");
			return false;
		}
		if (varNewValue != 99999999){
			if(!isDate(varNewValue)){
				alert("년월일(YYYYmmDD) 확인");
				return false;
			}
		}
	}
}

function ds_MIZZ220_OnColumnChanged(obj,nRow,strColumnID,varOldValue,varNewValue,nPivotIndex)
{
	if(strColumnID == "CATNO"){
		var p_FROW=ds_Category.FindRow("CD",substr(varNewValue,1,2));
		if (p_FROW > 0){
			var catnm1_m = ds_Category.GetColumn(p_FROW,"CDNM");
			ds_MIZZ220.SetColumn(nRow,"CATNM1",catnm1_m);
		}
	}
}
