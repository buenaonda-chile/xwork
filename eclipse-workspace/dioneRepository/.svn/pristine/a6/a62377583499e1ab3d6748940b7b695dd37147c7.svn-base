/********************************************************************** 
 * 내용설명 : 조회
 **********************************************************************/ 
 function getOgm214()
{
	if(!validationChk())
		return;
	var sKind		= "getOgm214";						
	var sMethodName = "service::psogmlib/selectOgm214.do"; 
	var sInDataSet  = "";
	var sOutDataSet = "ds_ogm214=ds_ogm214";
	var sArgument   = "";
		sArgument += "@LIB2=" + quote(Lib2);
		sArgument += "@COMPS=" + quote(ComboBoxPlant.Value); //사업부
		sArgument += "@WNDATS=" + quote(cmbWnDatS.Value); //검색기간START
		sArgument += "@WNDATE=" + quote(cmbWnDatE.Value); //검색기간END
	http.Sync = true;
	var str = dialog("Common::PGMLOAD.xml","sKind=" + sKind + " " + "sMethodName=" + sMethodName + " " + "sOutDataSet=" + sOutDataSet + " " + "sArgument=" + sArgument,272,64,"TitleBar=false");
	http.Sync = false;
	if (str == 'T'){  //정상조회
		getOgm214_sum();
		alert(setPopMessage("1004"));
		setMessage("1004");	
	}else if (str == 'B'){   //data값이 없을때
		alert(setPopMessage("1003"));
		setMessage("1003");	
	}else if (str == 'E'){   //error발생시
		alert(setPopMessage("1002"));
		setMessage("1002");	
	}	
}
/********************************************************************** 
 * 내용설명 : 선택라인 합계구하기
 **********************************************************************/ 
function getOgm214_sum(){
	
//	alert(ds_ogm214.GetRowCount());
	var sum_stphr=0;
	var cnt_nocnt=0;
	var sum_tothr=0;

	for (var i=0;i<ds_ogm214.GetRowCount();i++)
	{
		sum_stphr = sum_stphr+ parseFloat(ds_ogm214.getColumn(i,"SUM_STPHR"));
		cnt_nocnt = cnt_nocnt+ parseInt(ds_ogm214.getColumn(i,"CNT_STPHR"));
		sum_tothr = sum_tothr+ parseFloat(ds_ogm214.getColumn(i,"SUM_TOTHR"));
	}
	txtstphr.Text = NumFormat(sum_stphr,1);
	txtnocnt.Text = cnt_nocnt;
	txttothr.Text = NumFormat(sum_tothr,1);
}

/********************************************************************** 
 * 내용설명 : Transaction 리턴후 실행 함수
 **********************************************************************/ 
function callback(svcId, rtnCd, rtnMsg){
	// tran 실패
	if(rtnCd<0){
		alert(setPopMessage("1002"));
		setMessage("1002");
	// tran 성공	
	}else if(svcId=="getOgm214"){
	// 조회건수가 없을경우
		if(ds_ogm214.rowcount <= 0){
			alert(setPopMessage("1003"));
			setMessage("1003");	
		// 정상 조회
		} else {
			alert(setPopMessage("1004"));
			setMessage("1004");				
		}
		// tran 성공	
	}else if(svcId=="setOgm211"){
		alert(setPopMessage("1001"));
		setMessage("1001");
	}
}
