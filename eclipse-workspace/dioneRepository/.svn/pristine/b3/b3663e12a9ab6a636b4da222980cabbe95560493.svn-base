/********************************************************************** 
 * 내용설명 : 화면조회
 * 주요변수 : 
 **********************************************************************/ 
function getSMBZ121Q()
{
	if(length(trim(st_pyvnd.Text)) < 1){
		alert(setPopMessage("1502"));  //[확인] 거래처코드 확인바랍니다.
		setMessage("1502");	
		ed_pyvnd.SetFocus();
		return;
	}
	if(length(trim(cal_TAXYM.Value)) < 1){
		alert(setPopMessage("4032"));  //[확인] 입력년월을 확인바랍니다.
		setMessage("4032");	
		cal_TAXYM.SetFocus();
		return;
	}
	
	var jsoyy;
	if(toNumber(substr(cal_TAXYM.Value,4,2)) < 4){
		jsoyy = toNumber(substr(cal_TAXYM.Value,0,4)) - 1;
	}else{
		jsoyy = toNumber(substr(cal_TAXYM.Value,0,4));
	}
	
	var next_month, selectYM_lastDay,beforYM_lastDay;
	next_month = substr(AddMonth(cal_TAXYM.Value,1),0,6);
	selectYM_lastDay = AddDate(next_month+"01", -1);            //선택월 마지막일
	beforYM_lastDay = AddDate(substr(cal_TAXYM.Value,0,6)+"01", -1); //전월 마지막일

	var sKind		= "getSMBZ121Q";					
	var sMethodName = "service::pssallib/selectSMBZ121Q.do";     		// 서버에서 호출 될 Method 명
	var sInDataSet  = "";                             				// 자료 저장 시 보낼 DataSet 명칭
	var sOutDataSet = "ds_SMBZ121Q=ds_SMBZ121Q";    				// 조회 후 돌려 받을 DataSet 명칭
	var sArgument   = "";
	sArgument += "@LIB1=" + quote(Lib1);
	sArgument += "@LIB2=" + quote(Lib2);
	sArgument += "@COMPS=" + quote(cb_searchCodeName1.Value);
	sArgument += "@PYVND=" + quote(trim(ed_pyvnd.Text)); //
	sArgument += "@YYMM=" + quote(substr(cal_TAXYM.Value,0,6)); //선택년월
	sArgument += "@MM=" + quote(substr(cal_TAXYM.Value,4,2)); //선택월
	sArgument += "@YYYY=" + quote(jsoyy); //계산년
	sArgument += "@SLASTDAY=" + quote(selectYM_lastDay); //선택월 마지막일
	sArgument += "@BLASTDAY=" + quote(beforYM_lastDay);  //전월 마지막일
	var str = dialog("Common::PGMLOAD_SAL.xml","sKind=" + sKind + " " + "sMethodName=" + sMethodName + " " + "sOutDataSet=" + sOutDataSet + " " + "sArgument=" + sArgument,272,64,"TitleBar=false");
	if (str == 'T'){  //정상조회
		alert(setPopMessage("1004"));
		setMessage("1004");	
	}else if (str == 'B'){   //data값이 없을때
		alert(setPopMessage("1003"));  //[알림] 조회 된 데이터가 없습니다.
		setMessage("1003");	
	}else if (str == 'E'){   //error발생시
		alert(setPopMessage("1002"));
		setMessage("1002");	
	}
}

