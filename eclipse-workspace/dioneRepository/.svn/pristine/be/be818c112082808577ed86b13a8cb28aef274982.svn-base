function ds_FHDZ080_CanColumnChange(obj,nRow,strColumnID,varOldValue,varNewValue,nPivotIndex)
{

	if(strColumnID == "ZIPCD"){
		if(varNewValue !=""){
			http.Sync = true;
			var sKind		= "getHMD020PF";		
			var sMethodName = "service::pscomlib/selectFHD085PFPopup.do"; 
			var sInDataSet  = "";
			var sOutDataSet = "ds_FHD085PF=ds_Select";
			var sArgument   = "";
				sArgument  += " LIB2=" + quote(Lib2);
				sArgument  += " LIB3=" + quote(Lib3);
				sArgument  += " COMPS=" + quote(ComboBoxPlant.Value); //사업부
				sArgument  += " ZIPCD=" + quote(varNewValue);//우편번호
				//sArgument  += " ZIPNM=" + quote(ed_select.Text);//동이름
			Transaction(sKind, sMethodName, sInDataSet, sOutDataSet, sArgument, "");
			http.Sync = false;
			if (ds_FHD085PF.GetRowCount() < 1){
				//alert("알림]등록되지 않은 지역코드입니다.");
				alert(setPopMessage("6079")); //[알림]등록되지 않은 지역코드입니다.
				setMessage("6079");	
			return false;
			}
		}
	}
	
	if(strColumnID == "BUSCD"){
		if(varNewValue !="1" && varNewValue !="2" && varNewValue !=""){
			alert("1, 2만 입력가능합니다.");
			return false;
		}
	}
	if(strColumnID == "LICCD"){
		if(varNewValue !="1" && varNewValue !="2" && varNewValue !="3" && varNewValue !=""){
			alert("1, 2, 3만 입력가능합니다.");
			return false;
		}
	}
}


function ds_FHDZ080_OnColumnChanged(obj,nRow,strColumnID,varOldValue,varNewValue,nPivotIndex)
{

	if(strColumnID == "ZIPCD"){
		if(varNewValue !=""){
			ds_FHDZ080.SetColumn(nRow,"ZIPNM",ds_FHD085PF.GetColumn(0,"A2"));
		}else{
			ds_FHDZ080.SetColumn(nRow,"ZIPNM","");
		}
	}

	if(strColumnID == "BUSCD"){
		if(varNewValue =="1"){
			ds_FHDZ080.SetColumn(nRow,"BUSNM","자가");
		}else if(varNewValue =="2"){
			ds_FHDZ080.SetColumn(nRow,"BUSNM","버스");
		}else{
			ds_FHDZ080.SetColumn(nRow,"BUSNM","");
		}
	}
	if(strColumnID == "LICCD"){
		if(varNewValue =="1"){
			ds_FHDZ080.SetColumn(nRow,"LICNM","빵");
		}else if(varNewValue =="2"){
			ds_FHDZ080.SetColumn(nRow,"LICNM","쿠폰");
		}else if(varNewValue =="3"){
			ds_FHDZ080.SetColumn(nRow,"LICNM","식사");
		}else{
			ds_FHDZ080.SetColumn(nRow,"LICNM","");
		}
	}
}

