-->

<tiles-definitions>

    <!-- =================================================================== -->
    <!-- [EN] Layout definition -->
    <!-- [JP] レイアウト定義 -->
    <!-- =================================================================== -->

    <!-- [EN] Based layout  -->
    <!-- [JP] ベースレイアウト  -->
    <definition name=".tiles.layout.base" template="/WEB-INF/jsp/base/base.jsp">
        <put-attribute name="header" value="/WEB-INF/jsp/base/header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/jsp/base/footer.jsp" />
    </definition>

    <!-- [EN] Mobile Based layout  -->
    <!-- [JP] Mobile ベースレイアウト  -->
    <definition name=".tiles.layout.base.mobile" template="/WEB-INF/jsp/base/mobile/base.jsp">
      <put-attribute name="header" value="/WEB-INF/jsp/base/mobile/header.jsp" />
    </definition>

    <!-- [EN] Main screen -->
    <!-- [JP] メイン画面 -->
    <definition name=".tiles.layout.main" extends=".tiles.layout.base">
        <put-attribute name="type" value="main" cascade="true" />
    </definition>

    <!-- [EN] Sub screen -->
    <!-- [JP] Sub screen -->
    <definition name=".tiles.layout.sub" extends=".tiles.layout.base">
        <put-attribute name="type" value="sub" cascade="true" />
    </definition>

    <!-- [EN] Menu screen  -->
    <!-- [JP] メニュー画面  -->
    <definition name=".tiles.layout.menu" extends=".tiles.layout.base">
        <put-attribute name="type" value="menu" cascade="true" />
    </definition>

    <!-- [EN] Another screen  -->
    <!-- [JP] 別画面  -->
    <definition name=".tiles.layout.modeless" extends=".tiles.layout.base">
        <put-attribute name="type" value="modeless" cascade="true" />
    </definition>

    <!-- [EN] Another screen  -->
    <!-- [JP] 別画面  -->
    <definition name=".tiles.layout.kendo" extends=".tiles.layout.base">
        <put-attribute name="type" value="kendo" cascade="true" />
    </definition>

    <!-- [EN] Pop-up  -->
    <!-- [JP] ポップアップ画面  -->
    <definition name=".tiles.layout.modal" extends=".tiles.layout.base">
        <put-attribute name="type" value="modal" cascade="true" />
    </definition>

    <!-- [EN] Login layout -->
    <!-- [JP] Login layout -->
    <definition name=".tiles.layout.login" template="/WEB-INF/jsp/layout/login/base.jsp">
        <put-attribute name="header" value="/WEB-INF/jsp/layout/login/header.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/jsp/base/footer.jsp"/>
    </definition>

    <!-- ====================================================================-->
    <!-- [EN] Screen definition -->
    <!-- [EN] The layout of each screen definition should be described below. -->
    <!-- [JP] 画面定義 -->
    <!-- [JP] 各画面のレイアウト定義は下記に記述して下さい。 -->
    <!-- ====================================================================-->

    <!-- [EN] Login page -->
    <!-- [JP] Login page -->
    <definition name=".tiles.page.login" extends=".tiles.layout.login">
        <put-attribute name="body" value="/WEB-INF/jsp/page/login/WCMLogin.jsp" />
        <put-attribute name="tileNm" cascade="true" value="page"  />
    </definition>

    <!-- [EN] Mobile Login page -->
    <!-- [JP] Mobile Login page -->
    <definition name=".tiles.mobile.login" extends=".tiles.layout.login">
        <put-attribute name="body" value="/WEB-INF/jsp/mobile/login/WCMLogin.jsp" />
        <put-attribute name="tileNm" cascade="true" value="mobile"  />
    </definition>

    <!-- [EN] Main page -->
    <!-- [JP] Main page -->
    <definition name=".tiles.page.main" extends=".tiles.layout.main">
        <put-attribute name="body" value="/WEB-INF/jsp/page/WCMMain.jsp"/>
    </definition>

    <!-- [EN] Sub page -->
    <!-- [JP] Sub page -->
    <definition name=".tiles.page.sub" extends=".tiles.layout.sub">
        <put-attribute name="body" value="/WEB-INF/jsp/page/WCMSub.jsp"/>
    </definition>

    <!-- [EN] Sub page -->
    <!-- [JP] Sub page -->
    <definition name=".tiles.page.*.*" extends=".tiles.layout.kendo">
        <put-attribute name="contents" value="/WEB-INF/jsp/page/{1}/{2}.jsp"/>
    </definition>

    <!-- [EN] Popup page -->
    <!-- [JP] Popup page -->
    <definition name=".tiles.popup.*.*" extends=".tiles.layout.modal">
        <put-attribute name="contents" value="/WEB-INF/jsp/popup/{1}/{2}.jsp"/>
    </definition>

    <!-- [EN] Mobile page -->
    <!-- [JP] Mobile page -->
    <definition name=".tiles.mobile.*.*" extends=".tiles.layout.base.mobile">
      <put-attribute name="type" value="mobile" cascade="true" />
      <put-attribute name="body" value="/WEB-INF/jsp/mobile/{1}/{2}.jsp"/>
    </definition>

</tiles-definitions>
