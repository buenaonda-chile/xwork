function gridInit() {
	
	/**
	 * grid 셋팅
	 * gridCommon.js 에서 공통으로 처리되있는 옵션을 변경하고 싶다면 gridInit 함수에서 바꾸고싶은 옵션만 재정의 하면됨.
	 */
	//컬럼정의
	columnsDefinition = [$column$];

	//컬럼 초기화
	flexGrid.initialize({
		columns: columnsDefinition
	});
	
}

