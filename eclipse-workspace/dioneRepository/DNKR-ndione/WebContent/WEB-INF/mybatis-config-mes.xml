<!DOCTYPE configuration PUBLIC
    "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

    <!-- [EN] Logger Implementation Definition -->
    <!-- [JP] Logger実装定義 -->
    <settings>
        <!-- [JP] MyBatisのデフォルトLoggerはSLF4Jです -->
        <!-- [EN] Default Logger of MyBatis is SLF4J -->
        <setting name="logImpl" value="LOG4J2" />
        <!-- JDBC type in the case that the field domain is null (Can not be changed) -->
        <setting name="jdbcTypeForNull" value="NULL" />
        <!-- Scope of local cache (Can not be changed) -->
        <setting name="localCacheScope" value="STATEMENT" />
        <setting name="defaultExecutorType" value="BATCH" />
        <setting name="defaultStatementTimeout" value="50000" />
    </settings>

    <!-- [EN] Alias Definition of Domain -->
    <!-- [JP] Domainの別名定義 -->
    <typeAliases>
        <!-- 생산성지표 -->
        <typeAlias alias="PrdPrfrmRgsDomain" type="com.globaldenso.dnkr.domain.PrdPrfrmRgsDomain" />
                        
    </typeAliases>

    <mappers>
        <!-- 생산성지표 -->
		<mapper resource="com/globaldenso/dnkr/integration/sqlmap/SqlMap-MesPrdPrfrmRgs.xml" />

    </mappers>

</configuration>