<mapper namespace="com.globaldenso.dicas.business.dao.ReceiptCDRepairReplacementDao">

  <resultMap id="codeMap" type="com.globaldenso.dicas.business.dto.ReceiptCDRepairReplacementDto">
  		<id property="rectNo" column="RECT_NO" javaType="java.lang.String" />
		<result property="rgstrId" column="RGSTR_ID" javaType="java.lang.Long" />
		<result property="rgstDt" column="RGST_DT" javaType="java.time.LocalDateTime" />
		<result property="updtrId" column="UPDTR_ID" javaType="java.lang.Long" />
		<result property="updtDt" column="UPDT_DT" javaType="java.time.LocalDateTime" />
		<result property="rectDt" column="RECT_DT" javaType="java.lang.String" />
		<result property="status" column="RECT_STATUS" javaType="java.lang.String" />
		<result property="partNo" column="PART_NO" javaType="java.lang.String" />
		<result property="partNm" column="ITEM_KOR_NM" javaType="java.lang.String" />
		<result property="custNm" column="CUST_NM" javaType="java.lang.String" />
		<result property="custId" column="RECT_CUST_ID" javaType="java.lang.Long" />
		<result property="custEmpId" column="RECT_EMP_SEQ" javaType="java.lang.Long" />
		<result property="custEmpNm" column="RECT_EMP_NM" javaType="java.lang.String" />
		<result property="admissStatus" column="ADMISS_STATUS" javaType="java.lang.String" />
		<result property="rectDiv" column="RECT_DIV" javaType="java.lang.String" />
		<result property="remark" column="ETC_CN" javaType="java.lang.String" />
		<result property="chk" column="CHK" javaType="java.lang.String" />
  </resultMap>


  <!-- ?? SQL?????? -->
   <select id="searchByKey" resultMap="codeMap" parameterType="com.globaldenso.dicas.business.domain.ReceiptCDRepairReplacementDomain">

    SELECT *
    FROM TB_RECT_MST
    WHERE RECT_NO = #{rectNo}
	  AND ROWNUM = 1

  </select>
  
  
  	<select id="searchByCondition" resultMap="codeMap" parameterType="Map">
  		SELECT * FROM
				((SELECT RECT_NO
  			   			,TO_CHAR(TO_DATE(RECT_DT, 'YYYY-MM-DD'), 'YYYY-MM-DD') AS RECT_DT 
  			   			,RECT_CUST_ID
  			   			,(SELECT CUST_NM FROM TB_CM_CUST WHERE RECT_CUST_ID = ID) AS CUST_NM
  			   			,(SELECT FST_NM FROM TB_CM_USER WHERE RECT_EMP_SEQ = USER_ID) AS RECT_EMP_NM
  			   			,RECT_EMP_SEQ
  			   			,RECT_STATUS
  			   			,ETC_CN
  				FROM TB_RECT_MST
  				WHERE RECT_DIV = 'O3') A LEFT OUTER JOIN
   				( SELECT C.PART_NO,C.PO_NO,D.ITEM_KOR_NM FROM
   						(SELECT PART_NO
   								,PO_NO
    					FROM TB_RECT_DTL) C JOIN
    					(SELECT PART_NO,ITEM_KOR_NM
    					FROM TB_DC_ITEM_INFO) D ON C.PART_NO=D.PART_NO
    			) B ON A.RECT_NO=B.RECT_NO)
    			WHERE 'SqlMap-OrderSDRepairItem.searchByCondition' = 'SqlMap-OrderSDRepairItem.searchByCondition'
   	  <if test="criteria.status != null and criteria.status != ''">
		  AND PO_STATUS = UPPER(#{criteria.status})
	  </if>
	  <if test="criteria.searchOrdDtFr != null and criteria.searchOrdDtFr != ''">
		  AND PO_DT  &gt;=  #{criteria.searchOrdDtFr}
	  </if>
	  <if test="criteria.searchOrdDtTo != null and criteria.searchOrdDtTo != ''">
		  AND PO_DT  &lt;=  #{criteria.searchOrdDtTo}  || '9999'
	  </if>
	  <if test="criteria.custNm != null and criteria.custNm != ''">
		  AND CUST_NM  LIKE '%' || #{criteria.custNm} || '%'
	  </if>
	  <if test="criteria.partNo != null and criteria.partNo != ''">
		  AND PART_NO  LIKE '%' || #{criteria.partNo} || '%'
	  </if>
	  <if test="criteria.orderNo != null and criteria.orderNo != ''">
		  AND A.PO_NO  LIKE  '%' || #{criteria.orderNo} || '%'
	  </if>
  		
	</select>
	
	<select id="searchCount" resultType="int" parameterType="Map">

    SELECT COUNT(RECT_NO) AS CNT
    FROM TB_RECT_MST

  </select>

  <insert id="createMst" parameterType="com.globaldenso.dicas.business.domain.ReceiptCDRepairReplacementDomain">

    INSERT INTO TB_RECT_MST(
			 RECT_NO
			,RGSTR_ID
			,RGST_DT
			,UPDTR_ID
			,UPDT_DT
			,RECT_DT
			,RECT_DIV
			,RECT_STATUS
			,RECT_CUST_ID
			,RECT_EMP_SEQ
			,ADMISS_STATUS
			,ETC_CN
	)VALUES(
			 #{rectNo}
			,#{rgstrId}
			,#{rgstDt}
			,#{updtrId}
			,#{updtDt}
			,replace(#{rectDt},'-')
			,'O3'
			,'R1'
			,#{custId}
			,#{custEmpId}
			,'A1'
			,#{remark}
	)

    <selectKey resultType="String" keyProperty="orderNo" order="BEFORE">
      SELECT FN_GET_RECT('RECT') FROM DUAL
    </selectKey>

  </insert>
  
   <insert id="createDtl" parameterType="com.globaldenso.dicas.business.domain.ReceiptCDRepairReplacementDomain">
  	INSERT INTO TB_RECT_DTL(
			 RECT_NO
			,RECT_DTL_SEQ
			,PART_NO
			,UNIT
			,QTY
			,ETC_CN
			,RGSTR_ID
			,RGST_DT
			,UPDTR_ID
			,UPDT_DT
	)VALUES(
			 #{rectNo}
			,'1'
			,#{partNo}
			,(select UNIT FROM TB_DC_ITEM_INFO WHERE PART_NO = #{partNo})
			,'1'
			,#{remark}
			,#{rgstrId}
			,#{rgstDt}
			,#{updtrId}
			,#{updtDt}
	)
  </insert>

  <update id="updateMst" parameterType="com.globaldenso.dicas.business.domain.ReceiptCDRepairReplacementDomain">

    UPDATE TB_RECT_MST
     SET UPDTR_ID = #{updtrId}
		,UPDT_DT = #{updtDt}
		,RECT_DT = replace(#{rectDt},'-')
		,RECT_CUST_ID = #{custId}
		,ETC_CN = #{remark}
 	WHERE RECT_NO = #{rectNo}

  </update>
  
  <update id="updateDtl" parameterType="com.globaldenso.dicas.business.domain.ReceiptCDRepairReplacementDomain">

	UPDATE TB_RECT_DTL
     SET UPDTR_ID = #{updtrId}
		,UPDT_DT = #{updtDt}
		,PART_NO = #{partNo}
		,ETC_CN = #{remark}
 	WHERE RECT_NO = #{rectNo}

  </update>

  <delete id="deleteMst" parameterType="com.globaldenso.dicas.business.domain.ReceiptCDRepairReplacementDomain">

    DELETE FROM TB_RECT_MST
    WHERE RECT_NO = #{rectNo}

  </delete>

  <delete id="deleteDtl" parameterType="com.globaldenso.dicas.business.domain.ReceiptCDRepairReplacementDomain">

    DELETE FROM TB_RECT_DTL
    WHERE RECT_NO = #{rectNo}

  </delete>

</mapper>
