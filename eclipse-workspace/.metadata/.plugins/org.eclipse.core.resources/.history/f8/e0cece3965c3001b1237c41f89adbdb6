   <select id="searchByKey" resultMap="codeMap" parameterType="com.globaldenso.dicas.business.domain.ReceiptDNKRRepairPartAdmissDomain">

    SELECT *
    FROM TB_RECT_MST	
    WHERE RECT_NO = #{rectNo}
	  AND ROWNUM = 1

  </select>
  
  
  	<select id="searchByCondition" resultMap="codeMap" parameterType="Map">
