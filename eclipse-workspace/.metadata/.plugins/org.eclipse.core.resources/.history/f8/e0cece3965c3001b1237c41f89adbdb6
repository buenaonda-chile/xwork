  </select>


  <update id="update" parameterType="com.globaldenso.dicas.business.domain.ReceiptDNKRRepairPartAdmissDomain">

    UPDATE TB_RECT_MST
     SET UPDTR_ID = #{updtrId}
		,UPDT_DT = #{updtDt}
		,RECT_DT = TO_DATE(#{rectDt}, 'YYYY-MM-DD')
		,CUST_ID = #{custId}
		,CUST_EMP_NM = #{custEmpNm}
		,ETC_CN = #{remark}
